    <distributionManagement>
        <repository>
            <id>nav-maven2-repo</id>
            <name>NAV Maven2 Internal Repository</name>
            <url>scp://utviklerportalen.adeo.no/var/rtv-mavenrep/maven2-release</url>
        </repository>
        <snapshotRepository>
            <id>nav-maven2-repo</id>
