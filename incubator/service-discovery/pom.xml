<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.0</version>
	</parent>

	<groupId>no.nav.esb</groupId>
	<artifactId>service-discovery</artifactId>
	<version>1.0-SNAPSHOT</version>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin
				</artifactId>
				<executions>
					<execution>
						<id>unpack-jython-scripts</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>no.stelvio.maven.plugins
									</groupId>
									<artifactId>maven-service-registry-plugin
									</artifactId>
									<version>1.0-SNAPSHOT</version>
									<includes>ListWSExports.py</includes>
								</artifactItem>
								<artifactItem>
									<groupId>no.nav.maven.support</groupId>
									<artifactId>busconfiguration</artifactId>
									<version>7.0.0.3-SNAPSHOT</version>
									<includes>environments/*</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-service-registry-plugin
				</artifactId>
				<version>1.0-SNAPSHOT</version>
				<executions>
					<execution>
						<id>create-service-registry</id>
						<phase>compile</phase>
						<goals>
							<goal>create-service-registry</goal>
						</goals>
						<configuration>
							<environments>
								<environment>Sandbox3</environment>
								<environment>Sandbox8</environment>
							</environments>
							<jythonScript>
								${project.build.directory}/dependency/ListWSExports.py
							</jythonScript>
							<datapowerHost>dp-tst-01.adeo.no</datapowerHost>
							<datapowerDomain>secgw-u1</datapowerDomain>
							<environmentDir>
								${project.build.directory}/dependency/environments
							</environmentDir>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-datapower-plugin</artifactId>
				<version>1.3-SNAPSHOT</version>
				<executions>
					<execution>
						<id>upload</id>
						<phase>deploy</phase>
						<goals>
							<goal>importFile</goal>
						</goals>
						<configuration>
							<domain>secgw-u1</domain>
							<importFile>${project.build.outputDirectory}/service-registry.xml</importFile>
							<destination>local:///service-registry.xml</destination>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

</project>
