<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.2</version>
	</parent>
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>no.stelvio.example</groupId>
	<artifactId>stelvio-example-echo-consumer</artifactId>
	<packaging>war</packaging>
	<version>1.0.0-SNAPSHOT</version>
	<name>Stelvio Example Application - Echo Consumer</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.1.1</version>
				<configuration>
					<warSourceDirectory>${basedir}/WebContent</warSourceDirectory>
					<warSourceExcludes>WEB-INF/classes</warSourceExcludes>
					<warSourceExcludes>WEB-INF/lib</warSourceExcludes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>2.3.2</version>
				<configuration>
					<source>1.6</source>
					<target>1.6</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<buildOutputDirectory>${basedir}/WebContent/WEB-INF/classes</buildOutputDirectory>
					<wtpversion>1.5</wtpversion>
					<wtpapplicationxml>true</wtpapplicationxml>
					<!-- Could be replaced by server definitions -->
					<additionalProjectFacets>
						<com.ibm.websphere.coexistence.web>7.0</com.ibm.websphere.coexistence.web>
						<com.ibm.websphere.extended.web>7.0</com.ibm.websphere.extended.web>
					</additionalProjectFacets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.4</version>
				<executions>
					<execution>
						<id>unpack-wsdls</id>
						<phase>generate-resources</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
						</configuration>
					</execution>
				</executions>
				<configuration>
					<includeClassifiers>jaxws</includeClassifiers>
					<outputDirectory>${basedir}/WebContent/WEB-INF</outputDirectory>
					<includes>wsdl/**/*</includes>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-clean-plugin</artifactId>
				<version>2.4.1</version>
				<configuration>
					<filesets>
						<fileset>
							<directory>WebContent/WEB-INF/wsdl</directory>
						</fileset>
					</filesets>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>

		<dependency>
			<groupId>no.stelvio.example</groupId>
			<artifactId>stelvio-example-echo-service-specification</artifactId>
			<classifier>jaxws</classifier>
			<version>1.0.0-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>no.stelvio</groupId>
			<artifactId>stelvio-consumer-java</artifactId>
			<version>2.1.3-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>javaee</groupId>
			<artifactId>javaee-api</artifactId>
			<version>5</version>
			<scope>provided</scope>
		</dependency>
		
		<!-- Needed for programmatic creation of SAML token -->
		<dependency>
			<groupId>com.ibm.ws.runtime</groupId>
			<artifactId>WS_Server</artifactId>
			<version>7.0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
		<!-- Needed for programmatic creation of SAML token -->
		<dependency>
			<groupId>com.ibm.jaxws.thinclient</groupId>
			<artifactId>WebServicesFeaturePackThinClientRuntime</artifactId>
			<version>7.0.0.1-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>

	</dependencies>
	<properties>
		<project.build.sourceEncoding>ISO-8859-1</project.build.sourceEncoding>
	</properties>
</project>