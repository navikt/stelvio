<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.2</version>
	</parent>
	
	<modelVersion>4.0.0</modelVersion>
	<groupId>no.stelvio.example</groupId>
	<artifactId>stelvio-example-echo-consumerEAR</artifactId>
	<packaging>ear</packaging>
	<version>1.0.0-SNAPSHOT</version>
	<name>Stelvio Example Application - Echo Consumer EAR application</name>

	<dependencies>
		<dependency>
			<groupId>no.stelvio.example</groupId>
			<artifactId>stelvio-example-echo-consumer</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<dependency>
			<groupId>javaee</groupId>
			<artifactId>javaee-api</artifactId>
			<version>5</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<directory>${target.dir}</directory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<version>2.9</version>
				<configuration>
					<wtpversion>1.5</wtpversion>
					<!-- Could be replaced by server definitions -->
					<additionalProjectFacets>
						<com.ibm.websphere.coexistence.web>7.0</com.ibm.websphere.coexistence.web>
						<com.ibm.websphere.extended.web>7.0</com.ibm.websphere.extended.web>
					</additionalProjectFacets>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.7</version>
				<configuration>
					<!-- No need for default deployment descriptor -->
					<version>5</version>
					<generateApplicationXml>false</generateApplicationXml>
					<!-- earSourceDirectory does not work: MECLIPSE-560 -->
					<!-- Duplicate files in / and src/main/application in the meanwhile -->
					<!--earSourceDirectory>${basedir}</earSourceDirectory>
					<earSourceIncludes>META-INF/</earSourceIncludes-->
					<!--
						Remove version from module filenames to make static reference in
						policyAttachments.xml work
					-->
					<fileNameMapping>no-version</fileNameMapping>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
