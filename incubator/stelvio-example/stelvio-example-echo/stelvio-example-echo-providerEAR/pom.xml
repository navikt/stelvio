<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>no.stelvio.example</groupId>
	<artifactId>stelvio-example-echo-providerEAR</artifactId>
	<packaging>ear</packaging>
	<version>1.0.0-SNAPSHOT</version>
	<name>Stelvio Example Application - Echo Provider EAR application</name>

	<dependencies>
		<dependency>
			<groupId>no.stelvio.example</groupId>
			<artifactId>stelvio-example-echo-provider</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>war</type>
		</dependency>
		<!-- Workaround for MECLIPSE-587. groupId should be javaee or eclipse-plugin should detect JEE version differently -->
		<dependency>
			<groupId>org.apache.openejb</groupId>
			<artifactId>javaee-api</artifactId>
			<version>5.0-3</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>

	<build>
		<directory>${target.dir}</directory>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<configuration>
					<wtpversion>1.5</wtpversion>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.5</version>
				<configuration>
					<!-- No need for default deployment descriptor -->
					<version>5</version>
					<generateApplicationXml>false</generateApplicationXml>
					<!-- earSourceDirectory does not work: MECLIPSE-560 -->
					<!-- Duplicate files in / and src/main/application in the meanwhile -->
					<!--earSourceDirectory>${basedir}</earSourceDirectory>
					<earSourceIncludes>META-INF/</earSourceIncludes-->
					<!--
						Remove version from module filenames to make static reference in
						policyAttachments.xml work
					-->
					<!-- fileNameMapping>no-version</fileNameMapping-->
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
