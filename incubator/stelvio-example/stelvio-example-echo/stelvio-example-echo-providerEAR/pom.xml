<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>no.stelvio.example</groupId>
	<artifactId>stelvio-example-echo-providerEAR</artifactId>
	<packaging>ear</packaging>
	<version>1.0.0-SNAPSHOT</version>
	<name>Stelvio Example Application - Echo Provider EAR application</name>

	<dependencies>
		<dependency>
			<groupId>no.stelvio.example</groupId>
			<artifactId>stelvio-example-echo-provider</artifactId>
			<version>1.0.0-SNAPSHOT</version>
			<type>war</type>
		</dependency>
	</dependencies>

	<build>
		<directory>${target.dir}</directory>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-ear-plugin</artifactId>
					<version>2.5</version>
					<configuration>
						<!-- No need for default deployment descriptor -->
						<version>5</version>
						<generateApplicationXml>false</generateApplicationXml>
						<!-- Make sure policyAttachments.xml is included in the .ear -->
						<earSourceDirectory>${basedir}</earSourceDirectory>
						<earSourceIncludes>META-INF/</earSourceIncludes>
						<!-- Remove version from module filenames to make static reference in policyAttachments.xml work -->
						<fileNameMapping>no-version</fileNameMapping>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
