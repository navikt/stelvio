<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<parent>
		<artifactId>maven-root-pom</artifactId>
		<groupId>no.stelvio.maven.poms</groupId>
		<version>1.2.2</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>

	<groupId>no.stelvio.example</groupId>
	<artifactId>stelvio-example-echo-service-jaxws</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>Stelvio Example Echo JAX-WS interface</name>

	<dependencies>
		<dependency>
			<groupId>no.stelvio.example</groupId>
			<artifactId>stelvio-example-echo-service</artifactId>
			<version>1.0-SNAPSHOT</version>
			<type>wsdl-interface</type>
			<classifier>wsdlif</classifier>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<!-- Required to understand packaging wsdl-interface -->
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-wsdl-plugin</artifactId>
				<version>1.10</version>
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.2</version>
				<executions>
					<execution>
						<phase>initialize</phase>
						<goals>
							<goal>unpack-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>${project.build.directory}/wsdl</outputDirectory>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>jaxws-maven-plugin</artifactId>
				<version>1.12</version>
				<executions>
					<execution>
						<goals>
							<goal>wsimport</goal>
						</goals>
						<configuration>
							<wsdlDirectory>${project.build.directory}/wsdl</wsdlDirectory>
							<wsdlFiles>
								<wsdlFile>no/stelvio/example/services/V1/stelvio-example-echo-service_EchoServiceWSEXP.wsdl</wsdlFile>
							</wsdlFiles>
						</configuration>
					</execution>
				</executions>
				<!-- jaxws-tools 2.1.7 is missing from central repo at the moment -->
				<dependencies>
					<dependency>
						<groupId>com.sun.xml.ws</groupId>
						<artifactId>jaxws-tools</artifactId>
						<version>2.1.4</version>
					</dependency>
				</dependencies>
			</plugin>
			<!-- Don't include the generated client -->
			<!-- Warning: Source and Javadoc still includes this file -->
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<excludes>
						<exclude>no/stelvio/example/services/v1/echoservice/binding2/EchoServiceWSEXPEchoServiceHttpService.java</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
