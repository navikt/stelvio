<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.nav.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<artifactId>maven-sca-root-pom</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>

	<build>
		<directory>${target.dir}</directory>
		<outputDirectory>${target.dir}/classes</outputDirectory>
		<testOutputDirectory>
			${target.dir}/test-classes
		</testOutputDirectory>
		<resources>
			<resource>
				<directory>${basedir}/src/main/resources</directory>
			</resource>
			<resource>
				<!-- TODO: This is here because WID insists on having the root folder as a source folder -->
				<!-- TODO: Review which files to exclude/include -->
				<directory>${basedir}</directory>
				<excludes>
					<exclude>bin/**</exclude>
					<exclude>.settings/**</exclude>
				</excludes>
				<includes>
					<include>**/*.wsdl</include>
					<include>**/*.xsd</include>
					<include>**/*.module</include>
					<include>**/*.modulex</include>
					<include>**/*.component</include>
					<include>**/*.import</include>
					<include>**/*.export</include>
					<include>**/*.ifm</include>
					<include>**/*.map</include>
					<include>**/*.scaj2ee</include>
				</includes>
			</resource>
		</resources>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<verbose>true</verbose>
						<fork>true</fork>
						<executable>
							${wid.runtime}\java\bin\javac
						</executable>
						<compilerVersion>1.5</compilerVersion>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<dependencies>
		<dependency>
			<groupId>com.ibm.maven.runtimes</groupId>
			<artifactId>wps-runtime</artifactId>
			<version>6.1.0-SNAPSHOT</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<properties>
		<!-- 
			TODO: WID goes bananas if the Maven build is using the default target folder as output. 
			As a workaround we are changing the target folder to a folder outside the project		
		-->
		<!-- TODO: Review this setting -->
		<target.dir>${user.home}/maven-build/${artifactId}</target.dir>
	</properties>
	
	<scm>
		<connection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/incubator/maven/maven-poms/maven-sca-root-pom
		</connection>
		<developerConnection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/incubator/maven/maven-poms/maven-sca-root-pom
		</developerConnection>
	</scm>
</project>