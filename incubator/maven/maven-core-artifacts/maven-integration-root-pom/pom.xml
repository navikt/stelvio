<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>no.nav.maven.poms</groupId>
	<artifactId>maven-integration-root-pom</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>Stelvio Integration Framework Master POM</name>

	<build>

		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.5</source>
						<target>1.5</target>
						<verbose>true</verbose>
						<fork>true</fork>
						<executable>
							${wid.runtime}\java\bin\javac
						</executable>
						<compilerVersion>1.5</compilerVersion>
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-plugin-plugin</artifactId>
					<dependencies>
						<!--  
							TODO: This dependency should ideally not be here, but in the plugins that are implemented i ANT.
							I tried it, but somehow the configuration is not taken into account when building these plugins as 
							part of an aggreation Maven module. See Maven bugs MPLUGIN-37 and MNG-1323 for more details.
						-->
						<dependency>
							<groupId>org.apache.maven</groupId>
							<artifactId>
								maven-plugin-tools-ant
							</artifactId>
							<version>2.0.5</version>
						</dependency>
					</dependencies>
				</plugin>
			</plugins>
		</pluginManagement>
		
		<plugins>
			<plugin>
				<groupId>ch.elca.el4j.maven.plugins</groupId>
				<artifactId>maven-depgraph-plugin</artifactId>
				<version>1.1</version>
			</plugin>
		</plugins>
		
	</build>
	<dependencies>
		<dependency>
			<groupId>com.ibm.maven.runtimes</groupId>
			<artifactId>wps-runtime</artifactId>
			<version>6.1</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	
	
	<properties>
		<!-- 
			TODO: WID goes bananas if the Maven build is using the default target folder as output. 
			As a workaround we are changing the target folder to a folder outside the project		
		-->
		<!-- TODO: Review this setting -->
		<target.dir>
			${user.home}/maven-target/${groupId}/${artifactId}/${version}
		</target.dir>
		
		<maven.version>2.0.7</maven.version>
		<project.build.sourceEncoding>
			UTF-8
		</project.build.sourceEncoding>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.apache.maven</groupId>
				<artifactId>maven-plugin-api</artifactId>
				<version>${maven.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.maven</groupId>
				<artifactId>maven-project</artifactId>
				<version>${maven.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.maven</groupId>
				<artifactId>maven-script-ant</artifactId>
				<version>${maven.version}</version>
			</dependency>
			<dependency>
				<groupId>org.codehaus.plexus</groupId>
				<artifactId>plexus-archiver</artifactId>
				<version>1.0-alpha-7</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<reporting>
		<plugins>
			<plugin>
				<artifactId>
					maven-project-info-reports-plugin
				</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jxr-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
					<configLocation>
						http://confluence.adeo.no/download/attachments/12007/nav_checkstyle.xml
					</configLocation>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.1</version>
				<reportSets>
					<reportSet>
						<id>html</id>
						<reports>
							<report>javadoc</report>
						</reports>
					</reportSet>
					<reportSet>
						<id>doccheck</id>
						<configuration>
							<name>DocCheck</name>
							<description>
								DocCheck documentation
							</description>
							<doclet>
								com.sun.tools.doclets.doccheck.DocCheck
							</doclet>
							<docletArtifact>
								<groupId>com.sun.tools.doclets</groupId>
								<artifactId>doccheck</artifactId>
								<version>1.2b2</version>
							</docletArtifact>
							<additionalparam>-d .</additionalparam>
							<destDir>doccheck</destDir>
						</configuration>
						<reports>
							<report>javadoc</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<artifactId>maven-pmd-plugin</artifactId>
				<configuration>
					<targetJdk>1.5</targetJdk>
					<rulesets>
						<ruleset>
							http://confluence.adeo.no/download/attachments/12007/nav_pmd.xml
						</ruleset>
					</rulesets>
					<format>xml</format>
					<linkXref>true</linkXref>
					<sourceEncoding>utf-8</sourceEncoding>
					<minimumTokens>100</minimumTokens>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

	<distributionManagement>
		<repository>
			<id>nav-maven2-internal-repo</id>
			<url>scp://maven.adeo.no/var/maven2/internal</url>
		</repository>
		<snapshotRepository>
			<id>nav-pensjon-maven2-snapshot-repo</id>
			<url>scp://10.33.1.53/var/maven2/snapshot</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>

	<scm>
		<connection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/incubator/maven/maven-core-artifacts/maven-integration-root-pom
		</connection>
		<developerConnection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/incubator/maven/maven-core-artifacts/maven-integration-root-pom
		</developerConnection>
	</scm>
</project>