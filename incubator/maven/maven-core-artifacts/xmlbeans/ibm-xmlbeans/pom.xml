<?xml version="1.0"?>
<project>
	<parent>
		<groupId>no.nav.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>
	<modelVersion>4.0.0</modelVersion>
	<groupId>no.nav.maven.support</groupId>
	<artifactId>ibm-xmlbeans</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>IBM XMLBeans artifacts</name>
	<build>
		<plugins>
			<plugin>
				<groupId>org.codehaus.mojo</groupId>
				<artifactId>xmlbeans-maven-plugin</artifactId>
				<version>2.3.2</version>
				<executions>
					<execution>
						<goals>
							<goal>xmlbeans</goal>
						</goals>
						<configuration>
							<noJavac>true</noJavac>
							<javaSource>1.5</javaSource>
							<sourceSchemas>
								<sourceSchema>
									ClientBinding.xsd
								</sourceSchema>
								<sourceSchema>
									ComponentScopedRefs.xsd
								</sourceSchema>
								<sourceSchema>
									Header.xsd
								</sourceSchema>
							</sourceSchemas>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>org.apache.xmlbeans</groupId>
			<artifactId>xmlbeans</artifactId>
			<version>2.4.0</version>
		</dependency>
	</dependencies>
</project>
