<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>no.nav.stelvio.poms</groupId>
	<artifactId>stelvio-integration-root-pom</artifactId>
	<packaging>pom</packaging>
	<version>1.4-SNAPSHOT</version>
	<name>Stelvio Integration Framework Master POM</name>

	<developers>
		<developer>
			<name>Erik Godding Boye</name>
			<id>ebf2812</id>
			<email>test@example.com</email>
			<organization>Zenior AS</organization>
			<roles>
				<role>architect</role>
				<role>developer</role>
			</roles>
			<timezone>+1</timezone>
		</developer>
	</developers>

	<build>
		<directory>${target.dir}</directory>
		<outputDirectory>${target.dir}/classes</outputDirectory>
		<testOutputDirectory>
			${target.dir}/test-classes
		</testOutputDirectory>
		<sourceDirectory />
		<resources>
			<resource>
				<!-- TODO: This is here because WID insists on having the root folder as a source folder -->
				<!-- TODO: Review which files to exclude/include -->
				<directory>${basedir}</directory>
				<excludes>
					<exclude>.settings/**</exclude>
					<exclude>bin/**</exclude>
					<exclude>gen/**</exclude>
				</excludes>
				<includes>
					<include>**/*.wsdl</include>
					<include>**/*.xsd</include>
					<include>**/*.module</include>
					<include>**/*.modulex</include>
					<include>**/*.component</include>
					<include>**/*.import</include>
					<include>**/*.export</include>
					<include>**/*.ifm</include>
					<include>**/*.map</include>
					<include>**/*.scaj2ee</include>
				</includes>
			</resource>
		</resources>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<verbose>true</verbose>
						<fork>true</fork>
						<executable>
							${wid.runtime}\java\bin\javac
						</executable>
						<compilerVersion>1.5</compilerVersion>
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-wps-artifact-plugin</artifactId>
					<groupId>no.nav.maven.plugins</groupId>
					<extensions>true</extensions>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-service-deploy-plugin</artifactId>
					<configuration>
						<assemblyType>zip</assemblyType>
						<keep>true</keep>
						<progressMonitor>none</progressMonitor>
						<workingDirectory>c:\tmp\maven-target\</workingDirectory>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
		
	</build>
	<dependencies>
		<dependency>
			<groupId>com.ibm.maven.runtimes</groupId>
			<artifactId>wps-runtime</artifactId>
			<version>6.1</version>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	
	
	<properties>
		<!-- 
			TODO: WID goes bananas if the Maven build is using the default target folder as output. 
			As a workaround we are changing the target folder to a folder outside the project		
		-->
		<!-- TODO: Review this setting -->
		<target.dir>
			${user.home}/maven-target/${groupId}/${artifactId}/${version}
		</target.dir>
		
		<maven.version>2.0.7</maven.version>
		<project.build.sourceEncoding>
			UTF-8
		</project.build.sourceEncoding>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.apache.maven</groupId>
				<artifactId>maven-plugin-api</artifactId>
				<version>${maven.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.maven</groupId>
				<artifactId>maven-project</artifactId>
				<version>${maven.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.maven</groupId>
				<artifactId>maven-script-ant</artifactId>
				<version>${maven.version}</version>
			</dependency>
			<dependency>
				<groupId>org.codehaus.plexus</groupId>
				<artifactId>plexus-archiver</artifactId>
				<version>1.0-alpha-7</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<reporting>
		<plugins>
			<plugin>
				<artifactId>
					maven-project-info-reports-plugin
				</artifactId>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-jxr-plugin</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-checkstyle-plugin</artifactId>
				<configuration>
					<configLocation>
						http://confluence.adeo.no/download/attachments/12007/nav_checkstyle.xml
					</configLocation>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-javadoc-plugin</artifactId>
				<version>2.1</version>
				<reportSets>
					<reportSet>
						<id>html</id>
						<reports>
							<report>javadoc</report>
						</reports>
					</reportSet>
					<reportSet>
						<id>doccheck</id>
						<configuration>
							<name>DocCheck</name>
							<description>
								DocCheck documentation
							</description>
							<doclet>
								com.sun.tools.doclets.doccheck.DocCheck
							</doclet>
							<docletArtifact>
								<groupId>com.sun.tools.doclets</groupId>
								<artifactId>doccheck</artifactId>
								<version>1.2b2</version>
							</docletArtifact>
							<additionalparam>-d .</additionalparam>
							<destDir>doccheck</destDir>
						</configuration>
						<reports>
							<report>javadoc</report>
						</reports>
					</reportSet>
				</reportSets>
			</plugin>
			<plugin>
				<artifactId>maven-pmd-plugin</artifactId>
				<configuration>
					<targetJdk>1.5</targetJdk>
					<rulesets>
						<ruleset>
							http://confluence.adeo.no/download/attachments/12007/nav_pmd.xml
						</ruleset>
					</rulesets>
					<format>xml</format>
					<linkXref>true</linkXref>
					<sourceEncoding>utf-8</sourceEncoding>
					<minimumTokens>100</minimumTokens>
				</configuration>
			</plugin>
		</plugins>
	</reporting>

	<distributionManagement>
		<repository>
			<id>nav-maven2-internal-repo</id>
			<url>scp://maven.adeo.no/var/maven2/internal</url>
		</repository>
		<snapshotRepository>
			<id>nav-pensjon-maven2-snapshot-repo</id>
			<url>scp://10.33.1.53/var/maven2/snapshot</url>
			<uniqueVersion>false</uniqueVersion>
		</snapshotRepository>
	</distributionManagement>

	<scm>
		<connection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/incubator/maven/maven-core-artifacts/stelvio-integration-root-pom
		</connection>
		<developerConnection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/incubator/maven/maven-core-artifacts/stelvio-integration-root-pom
		</developerConnection>
	</scm>
</project>