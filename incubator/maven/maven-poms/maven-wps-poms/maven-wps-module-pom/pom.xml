<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.nav.maven.poms</groupId>
		<artifactId>maven-wps-poms</artifactId>
		<version>1.3-SNAPSHOT</version>
	</parent>

	<artifactId>maven-wps-module-pom</artifactId>
	<version>1.3-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Stelvio Integration Framework WPS Module Master POM</name>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-jar-plugin</artifactId>
					<configuration>
						<classifier>jar</classifier>
						<archive>
							<manifest>
								<addDefaultSpecificationEntries>
									true
								</addDefaultSpecificationEntries>
								<addDefaultImplementationEntries>
									true
								</addDefaultImplementationEntries>
							</manifest>
							<manifestEntries>
								<Class-Path>
									${manifest.classpath}
								</Class-Path>
							</manifestEntries>
						</archive>
					</configuration>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-service-deploy-plugin</artifactId>
					<version>RELEASE</version>
					<configuration>
						<assemblyType>zip</assemblyType>
						<keep>true</keep>
						<progressMonitor>none</progressMonitor>
						<fileEncoding>ISO-8859-1</fileEncoding>
					</configuration>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-wid-plugin</artifactId>
					<configuration>
						<workspaceCodeStylesURL>
							http://confluence.adeo.no/download/attachments/30647/Nav-Formatter-0.1.xml?version=1
						</workspaceCodeStylesURL>
						<downloadJavadocs>true</downloadJavadocs>
						<downloadSources>true</downloadSources>
						<buildcommands>
							<buildCommand>
								<name>
									com.ibm.wbit.project.wbimodulebuilder_prejdt
								</name>
							</buildCommand>
							<buildCommand>
								<name>
									org.eclipse.jdt.core.javabuilder
								</name>
							</buildCommand>
							<buildCommand>
								<name>
									com.ibm.wbit.project.wbimodulebuilder_postjdt
								</name>
							</buildCommand>
						</buildcommands>
						<projectnatures>
							<projectnature>
								org.eclipse.wst.common.project.facet.core.nature
							</projectnature>
							<projectnature>
								org.eclipse.jdt.core.javanature
							</projectnature>
							<projectnature>
								org.eclipse.wst.common.modulecore.ModuleCoreNature
							</projectnature>
							<projectnature>
								org.eclipse.jem.workbench.JavaEMFNature
							</projectnature>
							<projectnature>
								com.ibm.ws.sca.rapiddeploy.style.SCAProjectNature
							</projectnature>
							<projectnature>
								com.ibm.wbit.project.generalmodulenature
							</projectnature>
						</projectnatures>
						<classpathContainers>
							<classpathContainer>
								<![CDATA[
								org.eclipse.jdt.launching.JRE_CONTAINER/org.eclipse.jdt.internal.debug.ui.launcher.StandardVMType/WebSphere Process Server v6.1 JRE
								]]>
							</classpathContainer>
							<classpathContainer>
								org.eclipse.jst.server.core.container/com.ibm.ws.ast.st.runtime.runtimeTarget.v61.bi/wps.v61
							</classpathContainer>
						</classpathContainers>
						<excludes>
							<exclude>
								com.ibm.maven.runtimes:wps-runtime
							</exclude>
						</excludes>
						<additionalConfig>
							<file>
								<name>
									.settings/com.ibm.ws.sca.rapiddeploy.style.prefs
								</name>
								<content>
									<![CDATA[
eclipse.preferences.version=1
config.version=6.1
									]]>
								</content>
							</file>
						</additionalConfig>
					</configuration>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-update-ear-plugin</artifactId>
					<version>RELEASE</version>
					<executions>
						<execution>
							<goals>
								<goal>update-ear</goal>
							</goals>
							<phase>package</phase>
						</execution>
					</executions>
				</plugin>
			</plugins>
		</pluginManagement>
		<plugins>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-update-ear-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>