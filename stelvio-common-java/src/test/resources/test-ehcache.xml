<?xml version="1.0" encoding="ISO-8859-1" ?>
<ehcache>

	<!-- 
		EH cache configuration for unit testing. 
	-->
	<diskStore path="java.io.tmpdir" />

	<defaultCache maxElementsInMemory="1" eternal="false" timeToIdleSeconds="120" timeToLiveSeconds="120" overflowToDisk="true" diskPersistent="false" diskExpiryThreadIntervalSeconds="120" />

	<cache name="sampleCache1"
	  maxElementsInMemory="1000"
	  eternal="true"
	  overflowToDisk="false"
	  memoryStoreEvictionPolicy="FIFO"
	/>
	
	<cache name="sampleCache2"
	  maxElementsInMemory="500"
	  eternal="false"
	  overflowToDisk="true"
	  timeToIdleSeconds="300"
	  timeToLiveSeconds="600"
	  diskPersistent="true"
	  diskExpiryThreadIntervalSeconds="1"
	  memoryStoreEvictionPolicy="LFU"
	/>	  
  

</ehcache>