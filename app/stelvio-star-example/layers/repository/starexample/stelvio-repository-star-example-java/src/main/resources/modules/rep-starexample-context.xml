<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="rep.starexample.saksbehandlerRepository"
	      class="no.stelvio.repository.star.example.saksbehandling.support.HibernateSaksbehandlerRepository">
		<property name="hibernateTemplate" ref="rep.starexample.hibernateTemplate"/>
	</bean>

	<bean id="rep.starexample.codesTableRepository"
	      class="no.stelvio.repository.codestable.support.HibernateCodesTableRepository">
		<property name="hibernateTemplate" ref="rep.starexample.hibernateTemplate"/>
	</bean>
	
	<bean id="rep.starexample.hibernateTemplate"
	      class="org.springframework.orm.hibernate3.HibernateTemplate">
		<property name="sessionFactory" ref="rep.starexample.sessionFactory"/>
	</bean>

	<bean id="rep.starexample.sessionFactory"
	      class="org.springframework.orm.hibernate3.annotation.AnnotationSessionFactoryBean">
		<property name="dataSource" ref="rep.starexample.dataSource"/>
		<property name="annotatedClasses">
			<list>
				<value>no.stelvio.domain.star.example.codestable.HenvendelseTypeCti</value>
				<value>no.stelvio.domain.star.example.saksbehandling.Saksbehandler</value>
				<value>no.stelvio.common.error.support.ErrorDefinition</value>
			</list>
		</property>
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialect">org.hibernate.dialect.HSQLDialect</prop>
				<prop key="hibernate.query.jpaql_strict_compliance">true</prop>
				<prop key="hibernate.generate_statistics">true</prop>
				<prop key="hibernate.show_sql">true</prop>
			</props>
		</property>
		<property name="schemaUpdate" value="false"/>
	</bean>

	<bean id="rep.starexample.dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="org.hsqldb.jdbcDriver"/>
		<property name="url" value="jdbc:hsqldb:hsql://localhost:9001"/>
		<property name="username" value="sa"/>
		<property name="password" value=""/>
	</bean>

	<bean id="hibernateStatistics" class="org.hibernate.jmx.StatisticsService">
		<property name="sessionFactory" ref="rep.starexample.sessionFactory"/>
	</bean>
	<bean class="org.springframework.jmx.export.MBeanExporter">
		<property name="beans">
			<map><entry key="starexample:type=HibernateStatistics" value-ref="hibernateStatistics"/></map>
		</property>
	</bean>
</beans>