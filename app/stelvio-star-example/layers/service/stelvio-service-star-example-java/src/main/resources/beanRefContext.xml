<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

	<bean id="star.example.beanFactory" class="org.springframework.context.support.ClassPathXmlApplicationContext">
		<!-- Spring context files for the service layer and repository layer -->
		<constructor-arg>
			<list>
				<value>modules/srv-starexample-context.xml</value>
				<value>modules/rep-starexample-context.xml</value>
			</list>
		</constructor-arg>
	</bean>
</beans>