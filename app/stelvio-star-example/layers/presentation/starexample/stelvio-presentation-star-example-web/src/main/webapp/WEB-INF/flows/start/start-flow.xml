<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-state idref="enter"/>

	<view-state id="enter" view="/pages/start.xhtml">
		<render-actions>
			<action bean="prs.start.form" method="setupForm"/>
		</render-actions>
		<transition on="retrieve" to="retrievePerson">
			<action bean="prs.start.form" method="bind"/>
		</transition>
	</view-state>

	<action-state id="retrievePerson">
		<action bean="prs.start.action" method="search"/>
		<transition on="success" to="finish"/>
	</action-state>

	<end-state id="finish" view="flowRedirect:overviewofhenvendelser-flow"/>

	<import resource="start-context.xml"/>
</flow>
