<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-state idref="oversikt"/>

	<view-state id="oversikt" view="/pages/henvendelse/oversiktoverhenvendelser.xhtml">
		<render-actions>
			<action bean="prs.henvendelse.oversiktAction" method="setupForm"/>
		</render-actions>
		<transition on="hent" to="hentStatistikk">
			<action bean="prs.henvendelse.oversiktAction" method="bindAndValidate"/>
		</transition>
	</view-state>

	<!-- action for calling back end -->
	<action-state id="hentStatistikk">
		<bean-action bean="prs.henvendelse.oversiktAction" method="hentStatistikk">
			<method-arguments>
				<argument expression="flowScope.prsHenvendelseOversiktForm"/>
			</method-arguments>
			<method-result name="flowScope.henvendelseStatistics"/>
		</bean-action>
		<transition on="success" to="oversikt"/>
	</action-state>

	<!-- Imports spring beans, and Valang stuff into this flow -->
	<import resource="oversiktoverhenvendelser-context.xml"/>
</flow>
