<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.springframework.org/schema/webflow
                          http://www.springframework.org/schema/webflow/spring-webflow-1.0.xsd">

	<start-state idref="overview"/>

	<view-state id="overview" view="/pages/henvendelse/overviewofhenvendelser.xhtml">
		<render-actions>
			<action bean="prs.henvendelse.overviewAction" method="setupForm"/>
		</render-actions>
		<transition on="retrieve" to="retrieveStatistics">
			<action bean="prs.henvendelse.overviewAction" method="bindAndValidate"/>
		</transition>
	</view-state>

	<!-- action for calling back end -->
	<action-state id="retrieveStatistics">
		<bean-action bean="prs.henvendelse.overviewAction" method="hentStatistikk">
			<method-arguments>
				<argument expression="flowScope.overviewOfHenvendelserForm"/>
			</method-arguments>
			<method-result name="flowScope.henvendelseStatistics"/>
		</bean-action>
		<transition on="success" to="overview"/>
	</action-state>

	<!-- Imports spring beans, and Valang stuff into this flow -->
	<import resource="overviewofhenvendelser-context.xml"/>
</flow>
