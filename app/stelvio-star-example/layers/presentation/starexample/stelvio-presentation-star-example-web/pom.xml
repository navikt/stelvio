<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<artifactId>layers</artifactId>
		<groupId>no.stelvio.layers</groupId>
		<version>1.0.2-SNAPSHOT</version>
	</parent>
	<artifactId>stelvio-presentation-star-example-web</artifactId>
	<groupId>no.stelvio.star.example</groupId>
	<packaging>war</packaging>
	<name>star-example :: presentation</name>
	<url>${basedir}/target/site/</url>

	<dependencies>
		<dependency>
			<groupId>no.stelvio.star.example</groupId>
			<artifactId>stelvio-domain-star-example-java</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>no.stelvio.star.example</groupId>
			<artifactId>stelvio-consumer-star-example-java</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>no.stelvio.star.example</groupId>
			<artifactId>stelvio-repository-star-example-java</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<!-- TODO common classes (interface, etc) should be in the common java project for services -->
			<groupId>no.stelvio.star.example</groupId>
			<artifactId>stelvio-service-star-example-ejb</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>no.stelvio.star.example</groupId>
			<artifactId>stelvio-presentation-star-example-java</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<groupId>no.stelvio</groupId>
			<artifactId>stelvio-presentation-java</artifactId>
			<version>${pom.version}</version>
		</dependency>
		<dependency>
			<artifactId>cglib</artifactId>
			<groupId>cglib</groupId>
			<version>2.2_beta1</version>
		</dependency>
		<dependency>
			<artifactId>asm</artifactId>
			<groupId>asm</groupId>
			<version>2.2.3</version>
		</dependency>
		<dependency>
			<artifactId>asm-commons</artifactId>
			<groupId>asm</groupId>
			<version>2.2.3</version>
		</dependency>
		<dependency>
			<artifactId>asm-util</artifactId>
			<groupId>asm</groupId>
			<version>2.2.3</version>
		</dependency>
		<dependency>
			<artifactId>asm-attrs</artifactId>
			<groupId>asm</groupId>
			<version>2.2.3</version>
		</dependency>
		<dependency>
			<artifactId>aspectjrt</artifactId>
			<groupId>aspectj</groupId>
			<version>1.5.3</version>
		</dependency>
		<dependency>
			<artifactId>aspectjweaver</artifactId>
			<groupId>aspectj</groupId>
			<version>1.5.3</version>
		</dependency>
		<dependency>
			<artifactId>spring-jmx</artifactId>
			<groupId>org.springframework</groupId>
			<version>2.0.2</version>
		</dependency>
		<dependency>
			<artifactId>spring-webflow</artifactId>
			<groupId>org.springframework</groupId>
			<version>1.0.1</version>
		</dependency>
		<dependency>
			<artifactId>jsf-facelets</artifactId>
			<groupId>com.sun.facelets</groupId>
			<version>1.1.11</version>
		</dependency>
		<dependency>
			<artifactId>facelets-taghandlers-tomahawk</artifactId>
			<groupId>net.sf.jsfcomp.facelets.taghandlers</groupId>
			<version>0.9</version>
		</dependency>
		<dependency>
			<artifactId>tomahawk</artifactId>
			<groupId>org.apache.myfaces.tomahawk</groupId>
			<version>1.1.3</version>
		</dependency>
		<dependency>
			<groupId>org.ajax4jsf</groupId>
			<artifactId>ajax4jsf</artifactId>
			<version>1.0.3</version>
		</dependency>
		<dependency>
			<groupId>com.opensymphony</groupId>
			<artifactId>oscache</artifactId>
			<version>2.3.2</version>
		</dependency>
		<dependency>
			<groupId>javax.el</groupId>
			<artifactId>el</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>com.sun</groupId>
			<artifactId>el-sun</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<!-- TODO extract exclusions and version into common pom on level over pres-java and pres-web -->
			<artifactId>spring-modules-validation</artifactId>
			<groupId>org.springmodules</groupId>
			<version>0.7</version>
			<!-- We don't want v1.2.x of Spring included -->
			<exclusions>
				<exclusion>
					<artifactId>spring</artifactId>
					<groupId>org.springframework</groupId>
				</exclusion>
				<exclusion>
					<artifactId>spring-full</artifactId>
					<groupId>org.springframework</groupId>
				</exclusion>
				<exclusion>
					<artifactId>jta</artifactId>
					<groupId>javax.transaction</groupId>
				</exclusion>
				<exclusion>
					<artifactId>ejb</artifactId>
					<groupId>javax.persistence</groupId>
				</exclusion>
				<exclusion>
					<artifactId>xml-apis</artifactId>
					<groupId>xml-apis</groupId>
				</exclusion>
				<exclusion>
					<artifactId>js</artifactId>
					<groupId>rhino</groupId>
				</exclusion>
				<exclusion>
					<artifactId>joda-time</artifactId>
					<groupId>joda-time</groupId>
				</exclusion>
				<exclusion>
					<artifactId>antlr</artifactId>
					<groupId>antlr</groupId>
				</exclusion>
				<exclusion>
					<artifactId>hibernate-annotations</artifactId>
					<groupId>org.hibernate</groupId>
				</exclusion>
			</exclusions>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.mortbay.jetty</groupId>
				<artifactId>maven-jetty-plugin</artifactId>
				<configuration>
					<scanIntervalSeconds>10</scanIntervalSeconds>
					<jettyConfig>jetty-jmx-platform.xml</jettyConfig>
					<connectors>
						<connector implementation="org.mortbay.jetty.nio.SelectChannelConnector">
							<port>80</port>
							<maxIdleTime>60000</maxIdleTime>
						</connector>
					</connectors>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>2.0-alpha-1</version>
				<executions>
					<execution>
						<id>copy-dependencies</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-dependencies</goal>
						</goals>
						<configuration>
							<outputDirectory>
								${basedir}/src/main/webapp/WEB-INF/lib/
							</outputDirectory>
							<includeScope>runtime</includeScope>
							<overWriteSnapshots>true</overWriteSnapshots>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<version>2.0</version>
				<configuration>
					<webappDirectory>
						${project.build.directory}/build
					</webappDirectory>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>
