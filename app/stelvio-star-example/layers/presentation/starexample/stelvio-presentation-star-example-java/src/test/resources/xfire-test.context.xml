<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd">

    <bean id="testWebService" class="org.codehaus.xfire.spring.remoting.XFireClientFactoryBean">
        <property name="serviceClass">
            <value>XFireTest$StockQuote</value>
        </property>
        <property name="wsdlDocumentUrl">
            <value>http://www.webservicex.net/stockquote.asmx?WSDL</value>
        </property>
        <property name="properties">
            <map>
                <entry>
                    <key><value>objectServiceFactory.portType</value></key>
                    <bean class="javax.xml.namespace.QName">
                        <constructor-arg index="0" value="http://www.webserviceX.NET/"/>
                        <constructor-arg index="1" value="StockQuoteSoap"/>
                    </bean>
                </entry>
            </map>
        </property>
    </bean>
</beans>
