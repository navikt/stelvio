<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.nav.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.0-SNAPSHOT</version>
	</parent>

	<groupId>com.ibm.connector2.cics</groupId>
	<artifactId>cicseciXA-61</artifactId>
	<packaging>rar</packaging>
	<version>1.0-SNAPSHOT</version>

	<build>
		<directory>${target.dir}</directory>
		<outputDirectory>${target.dir}/classes</outputDirectory>
		<testOutputDirectory>
			${target.dir}/test-classes
		</testOutputDirectory>
		<resources>
			<resource>
				<directory>connectorModule</directory>
				<filtering>false</filtering>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-rar-plugin</artifactId>
				<configuration>
					<includeJar>false</includeJar>
					<rarSourceDirectory>
						connectorModule
					</rarSourceDirectory>
					<manifestFile>connectorModule/META-INF/MANIFEST.MF</manifestFile>
				</configuration>
			</plugin>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>
					maven-project-interchange-plugin
				</artifactId>
				<executions>
					<execution>
						<goals>
							<goal>project-interchange</goal>
						</goals>
						<phase>package</phase>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	<properties>
		<!-- 
			TODO: WID goes bananas if the Maven build is using the default target folder as output. 
			As a workaround we are changing the target folder to a folder outside the project		
		-->
		<!-- TODO: Review this setting -->
		<target.dir>
			${user.home}/maven-target/${groupId}/${artifactId}/${version}
		</target.dir>
	</properties>
</project>
