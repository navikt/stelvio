<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.stelvio.int.operation.system-availability</groupId>
		<artifactId>system-availability</artifactId>
		<version>1.1-SNAPSHOT</version>
	</parent>

	<artifactId>system-availability-web-ear</artifactId>
	<name>System Availability Web EAR</name>
	<packaging>ear</packaging>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-ear-plugin</artifactId>
					<version>2.4</version>
					<configuration>
						<version>1.4</version>
						<displayName>
							${project.build.finalName}
						</displayName>
						<artifactTypeMappings>
							<artifactTypeMapping type="wps-library-jar" mapping="jar" />
						</artifactTypeMappings>
						<modules>
							<webModule>
								<groupId>${project.groupId}</groupId>
								<artifactId>
									system-availability-web
								</artifactId>
								<contextRoot>
									StelvioSystemAvailabilityWeb
								</contextRoot>
							</webModule>
							<jarModule>
								<groupId>no.stelvio.int</groupId>
								<artifactId>
									stelvio-commons-lib
								</artifactId>
							</jarModule>
						</modules>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>system-availability-web</artifactId>
			<type>war</type>
			<version>${project.version}</version>
		</dependency>
	</dependencies>
</project>