<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.2</version>
	</parent>
	
	<groupId>no.nav.int.appclient.wpshelper</groupId>
	<artifactId>wpshelper-bundle</artifactId>
	<packaging>pom</packaging>
	<version>2.0.1-SNAPSHOT</version>
	<name>WPS Helper Bundle Module</name>

	<scm>
		<connection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/nav-int-appclient/nav-int-wpshelper-bundle</connection>
		<developerConnection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/nav-int-appclient/nav-int-wpshelper-bundle</developerConnection>
	</scm>

	<properties>
		<launchClient.home>
			/opt/IBM/WebSphere/ProcServer/profiles/wps01/bin
		</launchClient.home>
		<artifacts.version>2.0.0</artifacts.version>
	</properties>

	<build>
		<finalName>wpshelpers-${project.version}</finalName>
		<plugins>
			<plugin>
				<artifactId>maven-assembly-plugin</artifactId>
				<configuration>
					<descriptorSourceDirectory>
						src/main/assembly
					</descriptorSourceDirectory>
				</configuration>
				<executions>
					<execution>
						<id>make-assembly</id>
						<phase>package</phase>
						<goals>
							<goal>attached</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<configuration>
						<preparationGoals>
							clean install
						</preparationGoals>
						<autoVersionSubmodules>
							true
						</autoVersionSubmodules>
						<tagBase>
							https://versjonskontroll.adeo.no/svn/stelvio/tags/int
						</tagBase>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<dependencies>
		<dependency>
			<groupId>no.nav.int.appclient.wpshelper</groupId>
			<artifactId>femhelper-ear</artifactId>
			<version>${artifacts.version}</version>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>no.nav.int.appclient.wpshelper</groupId>
			<artifactId>bpchelper-ear</artifactId>
			<version>${artifacts.version}</version>
			<type>ear</type>
		</dependency>
		<dependency>
			<groupId>no.nav.int.appclient.wpshelper</groupId>
			<artifactId>sibushelper-ear</artifactId>
			<version>${artifacts.version}</version>
			<type>ear</type>
		</dependency>
	</dependencies>

	<distributionManagement>
		<repository>
			<id>nav-maven2-internal-repo</id>
			<url>scp://maven.adeo.no/var/maven2/internal</url>
		</repository>
	</distributionManagement>
</project>