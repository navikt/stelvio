<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-wps-pom</artifactId>
		<version>1.1</version>
	</parent>

	<groupId>no.nav.maven.poc</groupId>
	<artifactId>layers</artifactId>
	<version>1.8-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>Maven POC ${project.artifactId}</name>

	<modules>
		<module>libs</module>
		<module>modules</module>
	</modules>
	
	<build>
		<plugins>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-mg-plugin</artifactId>
				<version>1.9</version>
				<configuration>
					<!-- This configure the version of Stelvio Commons Lib for all libraries and modules -->
					<stelvioCommonsLibSCMURL>
						scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/tags/int/stelvio-commons-lib-3.3
					</stelvioCommonsLibSCMURL>
					<stelvioCommonsBpcLibSCMURL>
						scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/tags/int/stelvio-commons-bpc-lib-1.2
					</stelvioCommonsBpcLibSCMURL>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<scm>
		<connection>${scm.connection}</connection>
		<developerConnection>${scm.connection}</developerConnection>
	</scm>
	<properties>
		<scm.root>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven-pocs/maven-build-poc/layers
		</scm.root>
		<scm.connection>${scm.root}</scm.connection>
	</properties>
</project>
