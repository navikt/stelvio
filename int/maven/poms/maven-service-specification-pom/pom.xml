<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.2-SNAPSHOT</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<groupId>no.stelvio.maven.poms</groupId>
	<artifactId>maven-service-specification-pom</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<build>
		<outputDirectory>${project.build.directory}/output</outputDirectory>

		<resources>
			<resource>
				<directory>.</directory>
				<includes>*.emx</includes>
			</resource>
		</resources>

		<!-- Custom lifecycle and packaging -->
		<extensions>
			<extension>
				<groupId>no.nav.maven.lifecycles</groupId>
				<artifactId>service-specification-plugin-lifecycle</artifactId>
				<version>1.0.0-SNAPSHOT</version>
			</extension>
		</extensions>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-dependency-plugin</artifactId>
					<version>2.1</version>
					<configuration>
						<outputDirectory>${project.build.directory}/projects</outputDirectory>
						<useSubDirectoryPerArtifact>true</useSubDirectoryPerArtifact>
					</configuration>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-rsa-transform-plugin</artifactId>
					<version>1.0.0-SNAPSHOT</version>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-wsdl-plugin</artifactId>
					<version>1.10</version>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-wsi-plugin</artifactId>
					<version>1.0.2</version>
					<configuration>
						<basedir>${project.build.outputDirectory}</basedir>
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-assembly-plugin</artifactId>
					<configuration>
						<descriptors>
							<descriptor>service-specification-assembly.xml</descriptor>
						</descriptors>
						<appendAssemblyId>false</appendAssemblyId>
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-release-plugin</artifactId>
					<configuration>
						<tagBase>https://versjonskontroll.adeo.no/svn/nav/tags/tjenester</tagBase>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	<scm>
		<connection>scm:svn:https://versjonskontroll.adeo.no/svn/nav/trunk/tjenester/service-specification-pom</connection>
		<developerConnection>scm:svn:https://versjonskontroll.adeo.no/svn/nav/trunk/tjenester/service-specification-pom</developerConnection>
	</scm>
	<properties>
		<scm.connection>scm:svn:https://versjonskontroll.adeo.no/svn/nav/trunk/tjenester/service-specification-pom</scm.connection>
	</properties>
</project>
