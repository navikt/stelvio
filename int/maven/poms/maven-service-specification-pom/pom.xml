<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>maven-root-pom</artifactId>
		<groupId>no.stelvio.maven.poms</groupId>
		<version>1.2.2</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>maven-service-specification-pom</artifactId>
	<version>1.0.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<build>
		<extensions>
			<extension>
				<groupId>no.nav.maven.lifecycles</groupId>
				<artifactId>service-specification-lifecycle</artifactId>
				<version>1.0.0-SNAPSHOT</version>
			</extension>
		</extensions>

		<sourceDirectory>${basedir}/src/main/wsdl</sourceDirectory>
		<outputDirectory>${project.build.directory}/wsdl</outputDirectory>
		<resources>
			<resource>
				<directory>${project.build.sourceDirectory}</directory>
			</resource>
		</resources>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-wsdl-plugin</artifactId>
					<version>1.12-SNAPSHOT</version>
					<configuration>
						<endpointAddress>${endpointAddress}</endpointAddress>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.jvnet.jax-ws-commons</groupId>
					<artifactId>jaxws-maven-plugin</artifactId>
					<version>2.1</version>
					<configuration>
						<wsdlDirectory>${project.build.outputDirectory}</wsdlDirectory>
					</configuration>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-wsi-plugin</artifactId>
					<version>1.0.3-SNAPSHOT</version>
					<configuration>
						<basedir>${project.build.outputDirectory}</basedir>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.2.1</version>
					<configuration>
						<descriptorRefs>
							<descriptorRef>service-specification</descriptorRef>
						</descriptorRefs>
						<appendAssemblyId>false</appendAssemblyId>
					</configuration>
					<executions>
						<execution>
				            <id>jaxws-javadoc</id>
				            <phase>package</phase>
				            <goals>
				              <goal>single</goal>
				            </goals>
				            <configuration>
								<descriptorRefs>
									<descriptorRef>jaxws-javadoc</descriptorRef>
								</descriptorRefs>
								<appendAssemblyId>true</appendAssemblyId>
				            </configuration>
						</execution>
						<execution>
				            <id>jaxws-sources</id>
				            <phase>package</phase>
				            <goals>
				              <goal>single</goal>
				            </goals>
				            <configuration>
								<descriptorRefs>
									<descriptorRef>jaxws-sources</descriptorRef>
								</descriptorRefs>
								<appendAssemblyId>true</appendAssemblyId>
				            </configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<configuration>
						<classifier>jaxws</classifier>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<scm>
		<connection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/poms/maven-service-specification-pom</connection>
		<developerConnection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/poms/maven-service-specification-pom</developerConnection>
	</scm>
	<dependencyManagement>
		<dependencies>
		</dependencies>
	</dependencyManagement>
	<properties>
		<scm.connection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/poms/maven-service-specification-pom</scm.connection>
	</properties>
</project>
