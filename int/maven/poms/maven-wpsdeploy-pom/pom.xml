<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.2</version>
		<relativePath>../maven-root-pom</relativePath>
	</parent>

	<groupId>no.nav.maven.poms</groupId>
	<artifactId>maven-wpsdeploy-pom</artifactId>
	<packaging>deployable-artifact</packaging>
	<version>0</version><!-- No version because this pom is nevere uploaded to a repository -->
	<name>POM for deployments</name>

	<properties>
		<wpsdeployVersion>9.0.2</wpsdeployVersion>
		<passwordVault>/home/${USER}/vault/</passwordVault>
		<tmpExtractDir>${project.build.directory}/tmpExtractDir</tmpExtractDir>
		<tmpInterpolationStageOne>${project.build.directory}/tmpInterpolationStageOne</tmpInterpolationStageOne>
		<busConfigDir>${project.build.directory}/bus-config</busConfigDir>
	</properties>

	<dependencies>
		<dependency>
			<groupId>no.nav.maven.support</groupId>
			<artifactId>esb-authorization-configuration</artifactId>
			<version>${esb-authorization-configuration}</version>
		</dependency>
		<dependency>
			<groupId>no.nav.maven.support</groupId>
			<artifactId>esb-nonenviroment-configuration</artifactId>
			<version>${esb-nonenviroment-configuration}</version>
		</dependency>
		<dependency>
			<groupId>no.nav.maven.support</groupId>
			<artifactId>esb-enviroment-configuration</artifactId>
			<version>${esb-enviroment-configuration}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-wpsdeploy-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>
					maven-propertiesgenerator-plugin
				</artifactId>
			</plugin>
			<plugin>
				<groupId>no.nav.aura.maven.plugins</groupId>
				<artifactId>nav-envtools-plugin</artifactId>
				<version>2.0.3</version>
				<executions>
					<execution>
						<id>filter-resources</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>filter-resources</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<libVersion>2.0.15</libVersion>
					<configVersion>2.0.0-SNAPSHOT</configVersion>
					<vaultDirectoryPath>${passwordVault}</vaultDirectoryPath>
					<outputDirectory>${tmpInterpolationStageOne}</outputDirectory>
					<resources>
						<resource>
							<targetPath>.</targetPath>
							<directory>${tmpExtractDir}</directory>
							<includes>
								<include>**/*</include>
							</includes>
							<excludes>
								<exclude>**/pom.xml</exclude>
							</excludes>
						</resource>
					</resources>
				</configuration>
			</plugin>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-properties-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<!-- Load properties from file -->
					<execution>
						<id>load-property-files</id>
						<phase>process-resources</phase>
						<goals>
							<goal>load-properties</goal>
						</goals>
						<configuration>
							<files>
								<file>${passwordVault}/${envClass}/${envName}/application.properties</file>
								<file>${passwordVault}/${envClass}/${envName}/environment.properties</file>
							</files>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<id>interpolate-passwords</id>
						<phase>compile</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<!-- Specifies where the property files end up after interpolation -->
							<outputDirectory>${busConfigDir}</outputDirectory>
							<resources>
								<resource>
									<directory>${tmpInterpolationStageOne}</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-wpsdeploy-plugin</artifactId>
					<version>${wpsdeployVersion}</version> 
					<configuration>
						<artifacts>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>pensjon-modules</artifactId>
								<version>${pensjon-modules-version}</version>
								<variableName>PENSJON_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>nav-modules</artifactId>
								<version>${nav-modules-version}</version>
								<variableName>NAV_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>pensjon-prosess-modules</artifactId>
								<version>${pensjon-prosess-modules-version}</version>
								<variableName>PENSJON_PROCESS_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>esb-modules</artifactId>
								<version>${esb-modules-version}</version>
								<variableName>ESB_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>ekstern-modules</artifactId>
								<version>${ekstern-pensjon-modules-version}</version>
								<variableName>EKSTERN_MODULES_VERSION</variableName>
							</artifact>
						</artifacts>
					</configuration>
					<extensions>true</extensions>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-confluence-plugin</artifactId>
					<version>1.21</version>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-propertiesgenerator-plugin</artifactId>
					<version>3.0-SNAPSHOT</version>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>