<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.2</version>
		<relativePath>../maven-root-pom</relativePath>
	</parent>

	<groupId>no.nav.maven.poms</groupId>
	<artifactId>maven-wpsdeploy-pom</artifactId>
	<packaging>deployable-artifact</packaging>
	<version>0</version><!-- No version because this pom is nevere uploaded to a repository -->
	<name>POM for deployments</name>

	<properties>
		<wpsdeployVersion>3.0.4</wpsdeployVersion>
		<passwordVault>/home/${USER}/vault/</passwordVault>
		<tmpExtractDir>${project.build.directory}/tmp</tmpExtractDir>
	</properties>
	
	<dependencies>
		<dependency>
			<groupId>no.nav.maven.support</groupId>
			<artifactId>busconfiguration</artifactId>
			<version>${bus-configuration-version}</version>
		</dependency>
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-wpsdeploy-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>
					maven-propertiesgenerator-plugin
				</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<id>interpolate-passwords</id>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<!-- Specifies where the property files end up after interpolation -->
							<outputDirectory>${project.build.directory}/bus-config</outputDirectory>
							<resources>
								<resource>
									<directory>${tmpExtractDir}</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			 <plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-properties-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<!-- Load properties from file -->
					<execution>
						<id>load-property-files</id>
						<phase>process-sources</phase>
						<goals>
							<goal>load-properties</goal>
						</goals>
						<configuration>
							<files>
								<file>${passwordVault}/${envClass}/${environment}-env.properties</file>
								<file>${passwordVault}/${envClass}/application.properties</file>
							</files>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-wpsdeploy-plugin</artifactId>
					<version>${wpsdeployVersion}</version> 
					<configuration>
						<moduleConfigurationArtifactName>
							busconfiguration
						</moduleConfigurationArtifactName>
						<artifacts>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>pensjon-modules</artifactId>
								<version>${pensjon-modules-version}</version>
								<variableName>PENSJON_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>nav-modules</artifactId>
								<version>${nav-modules-version}</version>
								<variableName>NAV_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>pensjon-prosess-modules</artifactId>
								<version>${pensjon-prosess-modules-version}</version>
								<variableName>PENSJON_PROCESS_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>esb-modules</artifactId>
								<version>${esb-modules-version}</version>
								<variableName>ESB_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>ekstern-modules</artifactId>
								<version>${ekstern-pensjon-modules-version}</version>
								<variableName>EKSTERN_MODULES_VERSION</variableName>
							</artifact>
						</artifacts>
					</configuration>
					<extensions>true</extensions>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-confluence-plugin</artifactId>
					<version>1.21</version>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-propertiesgenerator-plugin</artifactId>
					<version>1.6</version>
					<configuration>
						<templateDir>
							${tmpExtractDir}/templates
						</templateDir>
						<environmentName>
							${environment}
						</environmentName>
						<outputDir>
							${tmpExtractDir}/app_props
						</outputDir>
						<environmentDir>
							${tmpExtractDir}/environments
						</environmentDir>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
