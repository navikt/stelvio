<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.1</version>
		<relativePath>../maven-root-pom</relativePath>
	</parent>

	<groupId>no.nav.maven.poms</groupId>
	<artifactId>maven-wpsdeploy-pom</artifactId>
	<packaging>pom</packaging>
	<version>1.0.7-SNAPSHOT</version>
	<name>POM for deployments</name>

	<properties>
		<hei>${project.build.directory}/TMP</hei>
	</properties>
	
	<build>
	<filters>
		<filter>${serviceusers}</filter>
		<filter>${envcreds}</filter>
		<filter>${bogus-test}</filter>
	</filters>
		<plugins>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-wpsdeploy-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>
					maven-propertiesgenerator-plugin
				</artifactId>
			</plugin>
			<plugin>
				<artifactId>maven-resources-plugin</artifactId>
				<executions>
					<execution>
						<phase>generate-resources</phase>
						<id>testing</id>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<!-- Specifies where the property files end up after interpolation -->
							<outputDirectory>${project.build.directory}/bus-config</outputDirectory>
							<resources>
								<resource>
									<directory>${hei}</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-wpsdeploy-plugin</artifactId>
					<version>1.9-SNAPSHOT</version> 
					<configuration>
						<moduleConfigurationArtifactName>
							busconfiguration
						</moduleConfigurationArtifactName>
						<artifacts>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>pensjon-modules</artifactId>
								<version>${pensjon-modules-version}</version>
								<variableName>PENSJON_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>nav-modules</artifactId>
								<version>${nav-modules-version}</version>
								<variableName>NAV_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>pensjon-prosess-modules</artifactId>
								<version>${pensjon-prosess-modules-version}</version>
								<variableName>PENSJON_PROCESS_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>esb-modules</artifactId>
								<version>${esb-modules-version}</version>
								<variableName>ESB_MODULES_VERSION</variableName>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>ekstern-pensjon-modules</artifactId>
								<version>${ekstern-pensjon-modules-version}</version>
								<variableName>EKSTERN_PENSJON_MODULES_VERSION</variableName>
							</artifact>
						</artifacts>
					</configuration>
					<extensions>true</extensions>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-confluence-plugin</artifactId>
					<version>1.21</version>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-propertiesgenerator-plugin</artifactId>
					<version>1.7-SNAPSHOT</version>
					<configuration>
						<templateDir>
							${hei}/templates
						</templateDir>
						<environmentName>
							${environment}
						</environmentName>
						<outputDir>
							${hei}/app_props
						</outputDir>
						<environmentDir>
							${hei}/environments
						</environmentDir>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
</project>
