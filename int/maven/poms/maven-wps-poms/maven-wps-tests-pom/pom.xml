<?xml version="1.0" encoding="ISO-8859-1"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2</version>
		<relativePath>../../maven-root-pom</relativePath>
	</parent>

	<artifactId>maven-wps-tests-pom</artifactId>
	<version>2.0.1</version>
	<packaging>pom</packaging>
	<name>WPS Artifact Unit Tests Master POM</name>

	<build>
		<plugins>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-wps-artifact-plugin</artifactId>
				<version>2.0</version>
				<extensions>true</extensions>
			</plugin>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-wid-plugin</artifactId>
				<version>2.1</version>
				<configuration>
					<workspaceCodeStylesURL>
						${eclipse.workspaceCodeStylesURL}
					</workspaceCodeStylesURL>
					<downloadJavadocs>true</downloadJavadocs>
					<downloadSources>true</downloadSources>
					<runtimeName>WebSphere Process Server v7.0</runtimeName>
					<classpathContainers>
						<classpathContainer>
							<![CDATA[
							org.eclipse.jdt.launching.JRE_CONTAINER/org.eclipse.jdt.internal.debug.ui.launcher.StandardVMType/WebSphere Process Server v7.0 JRE
							]]>
						</classpathContainer>
						<classpathContainer>org.eclipse.jst.server.core.container/com.ibm.ws.ast.st.runtime.runtimeTarget.v70.bi/wps.v70</classpathContainer>
					</classpathContainers>
					<excludes>
						<exclude>
							com.ibm.maven.runtimes:wps-runtime
						</exclude>
					</excludes>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>com.ibm.maven.runtimes</groupId>
			<artifactId>wps-runtime</artifactId>
			<version>7.0.0.2</version>
			<scope>test</scope>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
	</dependencies>

	<properties>
		<scm.root>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/poms/maven-wps-poms/maven-wps-tests-pom</scm.root>
		<scm.connection>${scm.root}</scm.connection>
	</properties>

	<scm>
		<connection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/tags/maven-wps-tests-pom-2.0.1</connection>
		<developerConnection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/tags/maven-wps-tests-pom-2.0.1</developerConnection>
	</scm>
</project>