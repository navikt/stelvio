<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.nav.maven.poms</groupId>
		<artifactId>maven-wps-pom</artifactId>
		<version>1.5.1</version>
		<relativePath>../maven-wps-pom</relativePath>
	</parent>

	<artifactId>maven-wps-library-pom</artifactId>
	<version>1.5.1</version>
	<packaging>pom</packaging>
	<name>Stelvio Integration Framework WPS Library Master POM</name>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<artifactId>maven-jar-plugin</artifactId>
					<configuration>
						<archive>
							<manifest>
								<addDefaultSpecificationEntries>
									true
								</addDefaultSpecificationEntries>
								<addDefaultImplementationEntries>
									true
								</addDefaultImplementationEntries>
							</manifest>
							<manifestEntries>
								<Class-Path>
									${manifest.classpath}
								</Class-Path>
								<ServiceLibrary>true</ServiceLibrary>
							</manifestEntries>
						</archive>
					</configuration>
				</plugin>

				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-wid-plugin</artifactId>
					<configuration>
						<workspaceCodeStylesURL>
							${eclipse.workspaceCodeStylesURL}
						</workspaceCodeStylesURL>
						<downloadJavadocs>true</downloadJavadocs>
						<downloadSources>true</downloadSources>
						<buildcommands>
							<buildCommand>
								<name>
									com.ibm.wbit.project.wbimodulebuilder_prejdt
								</name>
							</buildCommand>
							<buildCommand>
								<name>
									org.eclipse.jdt.core.javabuilder
								</name>
							</buildCommand>
							<buildCommand>
								<name>
									com.ibm.wbit.project.wbimodulebuilder_postjdt
								</name>
							</buildCommand>
						</buildcommands>
						<projectnatures>
							<projectnature>
								org.eclipse.wst.common.project.facet.core.nature
							</projectnature>
							<projectnature>
								org.eclipse.jdt.core.javanature
							</projectnature>
							<projectnature>
								org.eclipse.wst.common.modulecore.ModuleCoreNature
							</projectnature>
							<projectnature>
								org.eclipse.jem.workbench.JavaEMFNature
							</projectnature>
							<projectnature>
								com.ibm.ws.sca.rapiddeploy.style.SCAProjectNature
							</projectnature>
							<projectnature>
								com.ibm.wbit.project.sharedartifactmodulenature
							</projectnature>
						</projectnatures>
						<classpathContainers>
							<classpathContainer>
								<![CDATA[
								org.eclipse.jdt.launching.JRE_CONTAINER/org.eclipse.jdt.internal.debug.ui.launcher.StandardVMType/WebSphere Process Server v6.1 JRE
								]]>
							</classpathContainer>
							<classpathContainer>
								org.eclipse.jst.server.core.container/com.ibm.ws.ast.st.runtime.runtimeTarget.v61.bi/wps.v61
							</classpathContainer>
						</classpathContainers>
						<excludes>
							<exclude>
								com.ibm.maven.runtimes:wps-runtime
							</exclude>
						</excludes>
						<additionalConfig>
							<file>
								<name>
									.settings/com.ibm.ws.sca.rapiddeploy.style.prefs
								</name>
								<content>
									<![CDATA[
eclipse.preferences.version=1
config.version=6.1
									]]>
								</content>
							</file>
						</additionalConfig>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<scm>
		<connection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/tags/maven-wps-poms-1.5.1/maven-wps-library-pom</connection>
		<developerConnection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/tags/maven-wps-poms-1.5.1/maven-wps-library-pom</developerConnection>
	</scm>
	<properties>
		<scm.root>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/poms/maven-wps-poms/maven-wps-library-pom
		</scm.root>
		<scm.connection>${scm.root}</scm.connection>
	</properties>
</project>