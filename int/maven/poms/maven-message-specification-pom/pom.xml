<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<parent>
		<artifactId>maven-root-pom</artifactId>
		<groupId>no.stelvio.maven.poms</groupId>
		<version>1.2.2</version>
	</parent>

	<modelVersion>4.0.0</modelVersion>
	<artifactId>maven-message-specification-pom</artifactId>
	<version>1.0.2-SNAPSHOT</version>
	<packaging>pom</packaging>

	
	<build>
		<extensions>
			<extension>
				<groupId>no.nav.maven.lifecycles</groupId>
				<artifactId>message-specification-lifecycle</artifactId>
				<version>1.0.1</version>
			</extension>
		</extensions>
		
		<sourceDirectory>${basedir}/src/main/xsd</sourceDirectory>
		<outputDirectory>${project.build.directory}/output</outputDirectory>
		<resources>
			<resource>
				<directory>${project.build.sourceDirectory}</directory>
				<targetPath>xsd</targetPath>
			</resource>
		</resources>
		
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-assembly-plugin</artifactId>
					<version>2.2.1</version>
					<configuration>
						<descriptorRefs>
							<descriptorRef>message-specification</descriptorRef>
						</descriptorRefs>
						<appendAssemblyId>false</appendAssemblyId>
					</configuration>
					<executions>
						<execution>
				            <id>jaxb-javadoc</id>
				            <phase>package</phase>
				            <goals>
				              <goal>single</goal>
				            </goals>
				            <configuration>
								<descriptorRefs>
									<descriptorRef>jaxb-javadoc</descriptorRef>
								</descriptorRefs>
								<appendAssemblyId>true</appendAssemblyId>
				            </configuration>
						</execution>
						<execution>
				            <id>jaxb-sources</id>
				            <phase>package</phase>
				            <goals>
				              <goal>single</goal>
				            </goals>
				            <configuration>
								<descriptorRefs>
									<descriptorRef>jaxb-sources</descriptorRef>
								</descriptorRefs>
								<appendAssemblyId>true</appendAssemblyId>
				            </configuration>
						</execution>
					</executions>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-jar-plugin</artifactId>
					<configuration>
						<classifier>jaxb</classifier>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.jvnet.jaxb2.maven2</groupId>
					<artifactId>maven-jaxb2-plugin</artifactId>
					<version>0.8.3</version>
					<configuration>
						<source>1.5</source>
						<target>1.5</target>
						<schemaDirectory>${project.build.directory}/output/xsd</schemaDirectory>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<scm>
		<connection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/poms/maven-message-specification-pom</connection>
		<developerConnection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/poms/maven-message-specification-pom</developerConnection>
	</scm>
	<properties>
		<scm.connection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/poms/maven-message-specification-pom</scm.connection>
	</properties>
	
	
</project>