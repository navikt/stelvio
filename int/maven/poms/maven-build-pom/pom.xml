<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.1</version>
		<relativePath>../maven-root-pom</relativePath>
	</parent>
	
	<groupId>no.nav.maven.poms</groupId>
	<artifactId>maven-build-pom</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>maven-build-pom</name>

	<properties>
		<buildVersion>1.0-SNAPSHOT</buildVersion>
		<ccProjectDir>D:/cc/</ccProjectDir>
		<scriptFolder>D:/scripts/</scriptFolder>
	</properties>

	<dependencies>

	</dependencies>

	<build>
	<!--
	  Build process:
	  1. Update views - initialize
	  2. Get activities (DEV) - validate
	  3. Remove SNAPSHOT (INT) - 
	  4. Deliver I (DEV -> INT) - generate-resources
	  5. COMPILE
	  6. Update maven repo
	  7. Put back SNAPSHOT
	  8. Deliver II (DEV -> INT) - package
	  9. Create baseline - package
	  10. Update Poms
	  11. Update CQ activities	  
	-->
		<plugins>
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 1: Remove WARN_UNRESERVED trigger -->
					<execution>
						<id>Remove WARN_UNRESERVED trigger</id>
						<phase>validate</phase>
						<goals>
							<goal>editWarnUnreserved</goal>
						</goals>
						<configuration>
							<action>remove</action>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 2: update views -->
					<execution>
						<id>updateViews</id>
						<phase>validate</phase>
						<goals>
							<goal>updateViews</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 3: deliver I -->
					<execution>
						<id>deliverCandidates</id>
						<phase>initialize</phase>
						<goals>
							<goal>deliverCandidates</goal>
						</goals>
						<configuration>
							<step>1</step>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
		    <plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 4: remove snapshot on int stream -->
					<execution>
						<id>Remove SNAPSHOT on Int stream</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>updatePom</goal>
						</goals>
						<configuration>
							<action>remove</action>
						</configuration>
					</execution>
				</executions>
			</plugin> 
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 5: install to local repo -->
					<execution>
						<id>Install</id>
						<phase>compile</phase>
						<goals>
							<goal>updateRepo</goal>
						</goals>
						<configuration>
							<action>install</action>
						</configuration>
					</execution>
				</executions>
			</plugin> 
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 6: deploy -->
					<execution>
						<id>Deploy</id>
						<phase>compile</phase>
						<goals>
							<goal>updateRepo</goal>
						</goals>
						<configuration>
							<action>deploy</action>
						</configuration>
					</execution>
				</executions>
			</plugin> 
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 7: put back snapshot on int stream -->
					<execution>
						<id>Put back SNAPSHOT on Int stream</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>updatePom</goal>
						</goals>
						<configuration>
							<action>put_back</action>
						</configuration>
					</execution>
				</executions>
			</plugin> 
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 8: deliver II -->
					<execution>
						<id>deliverCandidates</id>
						<phase>package</phase>
						<goals>
							<goal>deliverCandidates</goal>
						</goals>
						<configuration>
							<step>2</step>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 9: baseline -->
					<execution>
						<id>baseline</id>
						<phase>package</phase>
						<goals>
							<goal>baseline</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 10: check out poms in Dev stream -->
					<execution>
						<id>Prepare poms in Dev stream</id>
						<phase>verify</phase>
						<goals>
							<goal>prepare-pom-update</goal>
						</goals>
						<configuration>
							<action>setTask</action>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 11: check out poms in Dev stream -->
					<execution>
						<id>Prepare poms in Dev stream</id>
						<phase>verify</phase>
						<goals>
							<goal>prepare-pom-update</goal>
						</goals>
						<configuration>
							<action>checkout</action>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 12: check out poms in Dev stream -->
					<execution>
						<id>Prepare poms in Dev stream</id>
						<phase>verify</phase>
						<goals>
							<goal>updatePom</goal>
						</goals>
						<configuration>
							<action>increase</action>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 13: check out poms in Dev stream -->
					<execution>
						<id>Prepare poms in Dev stream</id>
						<phase>verify</phase>
						<goals>
							<goal>prepare-pom-update</goal>
						</goals>
						<configuration>
							<action>checkin</action>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 14: Add WARN_UNRESERVED trigger -->
					<execution>
						<id>Add WARN_UNRESERVED trigger</id>
						<phase>install</phase>
						<goals>
							<goal>editWarnUnreserved</goal>
						</goals>
						<configuration>
							<action>add</action>
						</configuration>
					</execution>
				</executions>
			</plugin>		
		</plugins>
	</build>
</project>
