<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>no.nav.maven.poms</groupId>
		<artifactId>maven-build-pom</artifactId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>
	
	<groupId>no.nav.maven.poms</groupId>
	<artifactId>maven-build-compile-pom</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>maven-build-compile-pom</name>

	<build>
	<!--
	  Build process:
	  1. Update views - initialize
	  2. Get activities (DEV) - validate
	  3. Remove SNAPSHOT (INT) - 
	  4. Deliver I (DEV -> INT) - generate-resources
	  5. COMPILE
	  6. Update maven repo
	  7. Put back SNAPSHOT
	  8. Deliver II (DEV -> INT) - package
	  9. Create baseline - package
	  10. Update Poms
	  11. Update CQ activities	  
	-->
		<plugins>

			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 5: install to local repo -->
					<execution>
						<id>Install</id>
						<phase>compile</phase>
						<goals>
							<goal>updateRepo</goal>
						</goals>
						<configuration>
							<action>install</action>
						</configuration>
					</execution>
				</executions>
			</plugin> 
					
		</plugins>
	</build>
</project>
