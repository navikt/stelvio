<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>no.nav.maven.poms</groupId>
		<artifactId>maven-build-pom</artifactId>
		<version>1.0</version>
		<relativePath>../</relativePath>
	</parent>
	
	<groupId>no.nav.maven.poms</groupId>
	<artifactId>maven-build-undo-pom</artifactId>
	<packaging>pom</packaging>
	<version>1.0</version>
	<name>maven-build-undo-pom</name>

	<build>
		<plugins>
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 1: check out poms in Dev stream -->
					<execution>
						<id>Undo delivery</id>
						<phase>verify</phase>
						<goals>
							<goal>undoDelivery</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 2: Add WARN_UNRESERVED trigger -->
					<execution>
						<id>Add triggers</id>
						<phase>install</phase>
						<goals>
							<goal>editTriggers</goal>
						</goals>
						<configuration>
							<action>add</action>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
		</plugins>
	</build>
</project>
