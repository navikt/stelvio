<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>no.nav.maven.poms</groupId>
		<artifactId>maven-build-pom</artifactId>
		<version>1.0-SNAPSHOT</version>
		<relativePath>../</relativePath>
	</parent>
	
	<groupId>no.nav.maven.poms</groupId>
	<artifactId>maven-build-prepare-pom</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>maven-build-prepare-pom</name>

	<build>
	<!--
	  Build process:
	  1. Update views - initialize
	  2. Get activities (DEV) - validate
	  3. Remove SNAPSHOT (INT) - 
	  4. Deliver I (DEV -> INT) - generate-resources
	  5. COMPILE
	  6. Update maven repo
	  7. Put back SNAPSHOT
	  8. Deliver II (DEV -> INT) - package
	  9. Create baseline - package
	  10. Update Poms
	  11. Update CQ activities	  
	-->
		<plugins>
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 1: Remove WARN_UNRESERVED trigger -->
					<execution>
						<id>Remove WARN_UNRESERVED trigger</id>
						<phase>validate</phase>
						<goals>
							<goal>editWarnUnreserved</goal>
						</goals>
						<configuration>
							<action>remove</action>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 2: update views -->
					<execution>
						<id>updateViews</id>
						<phase>validate</phase>
						<goals>
							<goal>updateViews</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 3: deliver I -->
					<execution>
						<id>deliverCandidates 1</id>
						<phase>validate</phase>
						<goals>
							<goal>deliverCandidates</goal>
						</goals>
						<configuration>
							<step>1</step>
						</configuration>
					</execution>
				</executions>
			</plugin>
			
		    <plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-build-plugin</artifactId>
				<version>${buildVersion}</version>
				<executions>
					<!-- Step 4: remove snapshot on int stream -->
					<execution>
						<id>Remove SNAPSHOT on Int stream</id>
						<phase>compile</phase>
						<goals>
							<goal>updatePom</goal>
						</goals>
						<configuration>
							<action>remove</action>
						</configuration>
					</execution>
				</executions>
			</plugin> 		
		</plugins>
	</build>
</project>
