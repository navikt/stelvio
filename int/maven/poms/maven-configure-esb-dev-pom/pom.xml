<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.2</version>
		<relativePath>../maven-root-pom</relativePath>
	</parent>
	
	<groupId>no.nav.maven.configure-esb-dev.pom
	</groupId>
	<artifactId>maven-configure-esb-dev-pom
	</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>maven-configure-esb-dev-pom</name>

	<properties>
		<manageProfilesLocation>${was.home}/bin
		</manageProfilesLocation>
		<profilePathRoot>${was.home}/profiles
		</profilePathRoot>
		<wpsProfilePath>${profilePathRoot}/esb
		</wpsProfilePath>
		<wpsTemplatePath>${was.home}/profileTemplates/default.esbserver
		</wpsTemplatePath>
		<scriptsHome>${project.build.directory}/scripts/configure_dev_wps
		</scriptsHome>
		<adaptersHome>${project.build.directory}/adapters
		</adaptersHome>
	</properties>

	<dependencies>
		<dependency>
			<groupId>no.nav.testsenter-tools</groupId>
			<artifactId>maven-configure-wps-dev-plugin</artifactId>
			<version>1.0-SNAPSHOT</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin
				</artifactId>
				<executions>
					<execution>
						<id>copy</id>
						<phase>validate</phase>
						<goals>
							<goal>copy</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>no.stelvio.int.jca-adapters
									</groupId>
									<artifactId>ADLDAPAdapter</artifactId>
									<version>7.0.2</version>
									<type>rar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/adapters
									</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.ibm.j2ca.email</groupId>
									<artifactId>CWYEM_EMail</artifactId>
									<version>7.0.0.3</version>
									<type>rar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/adapters
									</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.ibm.connector2.cics
									</groupId>
									<artifactId>cicseciNoTrans</artifactId>
									<version>7.2.0.1</version>
									<type>rar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/adapters
									</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>com.ibm.connector2.cics
									</groupId>
									<artifactId>cicseciXA</artifactId>
									<version>7.2.0.1</version>
									<type>rar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}/adapters
									</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
					<execution>
						<id>unpack</id>
						<phase>validate</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>no.nav.ts</groupId>
									<artifactId>ts-config</artifactId>
									<version>1.0.0-SNAPSHOT</version>
									<type>jar</type>
									<overWrite>true</overWrite>
									<outputDirectory>${project.build.directory}
									</outputDirectory>
									<includes>
										scripts/configure_dev_wps/*.py,scripts/configure_dev_wps/*.properties
									</includes>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>no.nav.testsenter-tools</groupId>
				<artifactId>maven-configure-wps-dev-plugin
				</artifactId>
				<version>1.0-SNAPSHOT</version>
				<executions>
					<execution>
						<id>createProfiles</id>
						<phase>install</phase>
						<goals>
							<goal>execute-commandline</goal>
						</goals>
						<configuration>
							<executable>${manageProfilesLocation}/manageProfiles.bat
							</executable>
							<arguments>-create -profileName esb -profilePath ${wpsProfilePath} -templatePath ${wpsTemplatePath} -enableAdminSecurity true -adminPassword ${adminPasswd}	-adminUserName ${adminUser}	-dbDelayConfig false -dbType DERBY_EMBEDDED -dbCommonForME false -dbCreateNew true -configureBSpace true -configureBRM false -cdbSchemaName ESB -omitAction defaultAppDeployAndConfig -isDeveloperServer -samplesPassword ${adminPasswd}</arguments>
						</configuration>
					</execution>
					<execution>
						<id>startServer1</id>
						<phase>install</phase>
						<goals>
							<goal>execute-commandline</goal>
						</goals>
						<configuration>
							<executable>${wpsProfilePath}/bin/startServer.bat
							</executable>
							<arguments>server1</arguments>
						</configuration>
					</execution>
					<execution>
						<id>configure-adapters</id>
						<phase>install</phase>
						<goals>
							<goal>configure-adapters</goal>
						</goals>
					</execution>
					<execution>
						<id>configure-security</id>
						<phase>install</phase>
						<goals>
							<goal>configure-security</goal>
						</goals>
					</execution>
					<execution>
						<id>stopServer</id>
						<phase>install</phase>
						<goals>
							<goal>execute-commandline</goal>
						</goals>
						<configuration>
							<executable>${wpsProfilePath}/bin/stopServer.bat
							</executable>
							<arguments>server1 -username ${adminUser} -password	${adminPasswd}</arguments>
						</configuration>
					</execution>
					<execution>
						<id>startServer2</id>
						<phase>install</phase>
						<goals>
							<goal>execute-commandline</goal>
						</goals>
						<configuration>
							<executable>${wpsProfilePath}/bin/startServer.bat
							</executable>
							<arguments>server1</arguments>
						</configuration>
					</execution>
					<execution>
						<id>import-ltpa</id>
						<phase>install</phase>
						<goals>
							<goal>import-ltpa</goal>
						</goals>
						<configuration>
							<ltpaurl>
								http://confluence.adeo.no/download/attachments/113033/test-ss.ltpa
							</ltpaurl>
						</configuration>
					</execution>
					<execution>
						<id>import-certificates</id>
						<phase>install</phase>
						<goals>
							<goal>import-certificates</goal>
						</goals>
						<configuration>
							<certificates>
								<certificate>http://confluence.adeo.no/download/attachments/61819/NAV+Test-CA-1.crt</certificate>
								<certificate>http://confluence.adeo.no/download/attachments/61826/Usertrust_Network.crt</certificate>
							</certificates>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>


</project>

