<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>no.nav.maven.bounce.pom</groupId>
	<artifactId>maven-bounce-pom</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>maven-bounce-pom</name>

	<properties>
		<!--
			Required properties: * da-configuration-version (DevArch config version) 
								 * bus-configuration-version (DevArch config version)
								 * environment (environment)  
			
		-->

		<wasdeployVersion>1.3-SNAPSHOT</wasdeployVersion>
		<bounceVersion>1.0-SNAPSHOT</bounceVersion>
		<dependencyVersion>2.0</dependencyVersion>
		<daConfigDirectory>da-config</daConfigDirectory>
		<busConfigDirectory>bus-config</busConfigDirectory>

		<outputDir>${project.build.directory}</outputDir>
		<environmentFilesDir>${outputDir}/${daConfigDirectory}/environments</environmentFilesDir>
		<environmentFile>${environmentFilesDir}/${environment}.xml</environmentFile> 
	</properties>

	<dependencies>
		<!-- The project configuration -->
		<dependency>
			<groupId>no.nav.maven.devarch</groupId>
			<artifactId>devarch-config</artifactId>
			<version>${da-configuration-version}</version>
		</dependency>
		<dependency>
			<groupId>no.nav.maven.support</groupId>
			<artifactId>busconfiguration</artifactId>
			<version>${bus-configuration-version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>${dependencyVersion}</version>
				<executions>
					<!-- Step 1: Download and unpack configuration files -->
					<execution>
						<id>unpack-configuration</id>
						<phase>validate</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>no.nav.maven.devarch</groupId>
									<artifactId>devarch-config</artifactId>
									<version>${da-configuration-version}</version>
									<outputDirectory>${outputDir}/${daConfigDirectory}</outputDirectory>
								</artifactItem>
								<artifactItem>
									<groupId>no.nav.maven.support</groupId>
									<artifactId>busconfiguration</artifactId>
									<version>${bus-configuration-version}</version>
									<outputDirectory>${outputDir}/${busConfigDirectory}</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<groupId>no.stelvio.maven.poms</groupId>
				<artifactId>maven-bounce-plugin</artifactId>
				<version>${bounceVersion}</version>
				<executions>
					<!-- Step 3: bounce -->
					<execution>
						<id>bounce</id>
						<phase>install</phase>
						<goals>
							<goal>bounce</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

		</plugins>
	</build>
</project>
