<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.1</version>
		<relativePath>../maven-root-pom</relativePath>
	</parent>
	
	<groupId>no.nav.maven.poms</groupId>
	<artifactId>maven-bounce-pom</artifactId>
	<packaging>pom</packaging>
	<version>1.0-SNAPSHOT</version>
	<name>maven-bounce-pom</name>

	<properties>
		<bounceVersion>1.3</bounceVersion>
		<dependencyVersion>2.0</dependencyVersion>
		<daConfigDirectory>da-config</daConfigDirectory>
		<tmpExtractDir>${project.build.directory}/tmp</tmpExtractDir>
		<outputDir>${project.build.directory}</outputDir>
		<environmentFilesDir>${outputDir}/${daConfigDirectory}/environments</environmentFilesDir>
		<miscFilesDir>${outputDir}/${daConfigDirectory}/misc</miscFilesDir>
		<restartConfigFile>${miscFilesDir}/config/applicationConfig.xml</restartConfigFile>
		<passwordVault>/home/${USER}/vault</passwordVault>	
		<environmentFile>${environmentFilesDir}/${env}.xml</environmentFile>
		<environmentXSD>${environmentFilesDir}/environment.xsd</environmentXSD>
		<zone>sensitiv</zone>
		<envClass>T</envClass>
	</properties>

	<dependencies>
		<!-- The project configuration -->
		<dependency>
			<groupId>no.nav.maven.devarch</groupId>
			<artifactId>devarch-config</artifactId>
			<version>${da-configuration-version}</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-dependency-plugin</artifactId>
				<version>${dependencyVersion}</version>
				<executions>
					<!-- Step 1: Download and unpack configuration files -->
					<execution>
						<id>unpack-configuration</id>
						<phase>validate</phase>
						<goals>
							<goal>unpack</goal>
						</goals>
						<configuration>
							<artifactItems>
								<artifactItem>
									<groupId>no.nav.maven.devarch</groupId>
									<artifactId>devarch-config</artifactId>
									<version>${da-configuration-version}</version>
									<outputDirectory>${tmpExtractDir}</outputDirectory>
								</artifactItem>
							</artifactItems>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-properties-plugin</artifactId>
				<version>1.1</version>
				<executions>
					<!-- Load properties from file -->
					<execution>
						<id>load-property-files</id>
						<phase>initialize</phase>
						<goals>
							<goal>load-properties</goal>
						</goals>
						<configuration>
							<files>
								<file>${passwordVault}/${envClass}/${env}-env.properties</file>
								<file>${passwordVault}/${envClass}/application.properties</file>
							</files>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-xmlvalidator-plugin</artifactId>
				<version>1.0</version>
				<executions>
					<!-- Step 2: Validate environment file against defined XSD -->
					<execution>
						<id>validate-xml</id>
						<phase>prepare-package</phase>
						<goals>
							<goal>validate-xml</goal>
						</goals>
						<configuration>
							<xsdFile>${environmentXSD}</xsdFile>
							<xmlFile>${environmentFile}</xmlFile>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<artifactId>maven-resources-plugin</artifactId>
				<executions>
				<!-- STEP X TODO -->
					<execution>
						<id>interpolate-devarchcfg</id>
						<phase>generate-sources</phase>
						<goals>
							<goal>copy-resources</goal>
						</goals>
						<configuration>
							<!-- Specifies where the property files end up after interpolation -->
							<outputDirectory>${outputDir}/${daConfigDirectory}</outputDirectory>
							<resources>
								<resource>
									<!-- Specifies where the application configuration/property files reside -->
									<directory>${tmpExtractDir}</directory>
									<filtering>true</filtering>
								</resource>
							</resources>
						</configuration>
					</execution>
				</executions>
			</plugin>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-wasdeploy-plugin</artifactId>
				<version>1.7-SNAPSHOT</version>
				<executions>
					<!-- Step 4: Download and unpack application artifacts -->
					<!-- Step 1: Load properties from environment file -->
					<execution>
						<id>load-xml-property-files</id>
						<phase>package</phase>
						<goals>
							<goal>load-xml-properties</goal>
						</goals>
						<configuration>
							<files>
								<file>${environmentFile}</file>
							</files>
						</configuration>
					</execution>					
				</executions>
			</plugin>			
			<plugin>
				<groupId>no.stelvio.maven.plugins</groupId>
				<artifactId>maven-bounce-plugin</artifactId>
				<version>${bounceVersion}</version>
				<executions>
					<!-- Step 3: bounce -->
					<execution>
						<id>bounce</id>
						<phase>install</phase>
						<goals>
							<goal>bounce</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
</project>
