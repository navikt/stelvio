<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.1</version>
		<relativePath>../maven-root-pom</relativePath>
	</parent>

	<groupId>no.nav.maven.poms</groupId>
	<artifactId>maven-wpsdeploy-ci-pom</artifactId>
	<packaging>deployable-artifact</packaging>
	<version>1.0.0-SNAPSHOT</version>
	<name>POM for CI deployments</name>

	<build>
		<plugins>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-wpsdeploy-plugin</artifactId>
			</plugin>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>
					maven-propertiesgenerator-plugin
				</artifactId>
			</plugin>
		</plugins>

		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-wpsdeploy-plugin</artifactId>
					<version>1.13</version>
					<configuration>
						<moduleConfigurationArtifactName>
							busconfiguration
						</moduleConfigurationArtifactName>
						<artifacts>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>nav-modules-ci</artifactId>
								<version>${nav-modules-ci-version}</version>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>pensjon-modules-ci</artifactId>
								<version>${pensjon-modules-ci-version}</version>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>ekstern-pensjon-modules-ci</artifactId>
								<version>${ekstern-pensjon-modules-ci-version}</version>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>esb-modules-ci</artifactId>
								<version>${esb-modules-ci-version}</version>
							</artifact>
							<artifact>
								<groupId>no.nav.esb</groupId>
								<artifactId>pensjon-prosess-modules-ci</artifactId>
								<version>${pensjon-prosess-modules-ci-version}</version>
							</artifact>
						</artifacts>
					</configuration>
					<extensions>true</extensions>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>maven-confluence-plugin</artifactId>
					<version>1.20</version>
				</plugin>
				<plugin>
					<groupId>no.nav.maven.plugins</groupId>
					<artifactId>
						maven-propertiesgenerator-plugin
					</artifactId>
					<version>1.6</version>
					<configuration>
						<templateDir>
							${basedir}/target/bus-config/templates
						</templateDir>
						<environmentName>
							${environment}
						</environmentName>
						<outputDir>
							${basedir}/target/bus-config/app_props
						</outputDir>
						<environmentDir>
							${basedir}/target/bus-config/environments
						</environmentDir>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>

	<scm>
		<connection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/poms/maven-wpsdeploy-ci-pom</connection>
		<developerConnection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/poms/maven-wpsdeploy-ci-pom</developerConnection>
	</scm>
	<properties>
		<scm.root>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/poms/maven-wpsdeploy-ci-pom
		</scm.root>
		<scm.connection>${scm.root}</scm.connection>
	</properties>
</project>
