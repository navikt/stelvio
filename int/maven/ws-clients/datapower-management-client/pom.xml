<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.2.1</version>
		<relativePath>../../poms/maven-root-pom
		</relativePath>
	</parent>

	<groupId>no.stelvio.maven.support</groupId>
	<artifactId>datapower-management-client</artifactId>
	<version>1.0-SNAPSHOT</version>
	<name>
		Stelvio Integration Framework DataPower Management Client
	</name>

	<build>
		<resources>
			<resource>
				<directory>src/main/wsdl</directory>
				<targetPath>wsdl/</targetPath>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-codegen-plugin</artifactId>
				<version>${cxf.version}</version>
				<executions>
					<execution>
						<configuration>
							<wsdlRoot>
								${project.basedir}/src/main/wsdl
							</wsdlRoot>
							<includes>
								<include>amp/**/*.wsdl</include>
							</includes>
							<wsdlOptions>
								<wsdlOption>
									<wsdl>${basedir}/src/main/wsdl/soma/xml-mgmt.wsdl</wsdl>	
									<bindingFiles>
										<bindingFile>${basedir}/src/main/wsdl/soma/xml-mgmt-ops.jxb</bindingFile>
									</bindingFiles>
								</wsdlOption>
							</wsdlOptions>
						</configuration>
						<goals>
							<goal>wsdl2java</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-surefire-plugin</artifactId>
				<configuration>
					<!--
						Skip tests because they perform network operations, and should not
						be run by CI (only manually)
					-->
					<skip>true</skip>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<dependencies>
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-frontend-jaxws</artifactId>
			<version>${cxf.version}</version>
		</dependency>
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-rt-transports-http</artifactId>
			<version>${cxf.version}</version>
			<scope>runtime</scope>
		</dependency>

		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
		</dependency>
	</dependencies>

	<scm>
		<connection>${scm.connection}</connection>
		<developerConnection>${scm.connection}
		</developerConnection>
	</scm>

	<properties>
		<cxf.version>2.2.9</cxf.version>
		<scm.root>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/ws-clients/datapower-management-client
		</scm.root>
		<scm.connection>${scm.root}</scm.connection>
	</properties>
</project>