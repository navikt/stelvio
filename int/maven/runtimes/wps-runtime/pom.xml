<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.nav.maven.runtimes</groupId>
		<artifactId>maven-runtimes</artifactId>
		<version>1.3-SNAPSHOT</version>
	</parent>

	<groupId>com.ibm.maven.runtimes</groupId>
	<artifactId>wps-runtime</artifactId>
	<packaging>jar</packaging>
	<version>7.0.0.0-SNAPSHOT</version>
	<name>IBM WPS Runtime</name>

	<build>
		<resources>
			<resource>
				<directory>${basedir}</directory>
				<targetPath>META-INF</targetPath>
				<includes>
					<include>files.txt</include>
				</includes>
			</resource>
		</resources>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.3</version>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<configuration>
							<tasks>
								<loadfile property="files" srcFile="${basedir}/files.txt"/>
								<unzip dest="${project.build.outputDirectory}" overwrite="false">
									<patternset>
										<include name="**/*.class" />
									</patternset>
									<filelist dir="${wps.runtime}" files="${files}" />
								</unzip>
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>
	
	<scm>
		<connection>${scm.connection}</connection>
		<developerConnection>${scm.connection}</developerConnection>
	</scm>
	<properties>
		<scm.connection>${scm.root}/${project.artifactId}</scm.connection>
	</properties>
</project>