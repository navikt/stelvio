<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.nav.maven.poms</groupId>
		<artifactId>maven-wps-pom</artifactId>
		<version>1.6</version>
	</parent>

	<groupId>no.nav.maven.poc</groupId>
	<artifactId>module-groups</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>
	
	<modules>
		<module>poc-mg1</module>
	</modules>

	<build>
		<plugins>
			<plugin>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-mg-plugin</artifactId>
				<version>1.8-SNAPSHOT</version>
				<configuration>
					<!-- This configure the version of Stelvio Commons Lib for all libraries and modules -->
					<stelvioCommonsLibSCMURL>
						scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/tags/int/stelvio-commons-lib-3.1.6
					</stelvioCommonsLibSCMURL>
					
					<stelvioCommonsBpcLibSCMURL>
						scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/tags/int/stelvio-commons-bpc-lib-1.0.1
					</stelvioCommonsBpcLibSCMURL>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<scm>
		<connection>${scm.connection}</connection>
		<developerConnection>${scm.connection}</developerConnection>
	</scm>
	<properties>
		<scm.root>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven/maven-poc/module-groups
		</scm.root>
		<scm.connection>${scm.root}</scm.connection>
	</properties>
</project>