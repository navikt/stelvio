<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>no.stelvio.maven.poms</groupId>
		<artifactId>maven-root-pom</artifactId>
		<version>1.1</version>
		<relativePath>../../maven/poms/maven-root-pom</relativePath>
	</parent>

	<groupId>com.ibm.maven.runtimes</groupId>
	<artifactId>wps-runtime</artifactId>
	<packaging>jar</packaging>
	<version>7.0.0.3-SNAPSHOT</version>
	<name>IBM WPS Runtime</name>
	<description>All jar files in the IBM WPS runtime merged into one big jar files. Three of the jars are uploaded separately
		and added as dependencies to overcome the 65536-files limitation of Sun's Jar implementation</description>

	<build>
		<plugins>
			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.4</version>
				<executions>
					<execution>
						<phase>process-resources</phase>
						<configuration>
							<tasks>
								<taskdef resource="net/sf/antcontrib/antcontrib.properties" classpathref="maven.plugin.classpath" />
								<property name="unzipDirectory" value="${project.build.outputDirectory}" />
								<property name="filesBaseDirectory" value="${wid.runtime}" />
								<ant target="unzipFiles" />
							</tasks>
						</configuration>
						<goals>
							<goal>run</goal>
						</goals>
					</execution>
				</executions>
				<dependencies>
					<dependency>
						<groupId>ant-contrib</groupId>
						<artifactId>ant-contrib</artifactId>
						<version>1.0b3</version>
						<exclusions>
							<exclusion>
								<groupId>ant</groupId>
								<artifactId>ant</artifactId>
							</exclusion>
						</exclusions>
					</dependency>
				</dependencies>
			</plugin>
		</plugins>
	</build>

	<!-- Large jar files uploaded separately to shrink the size of the archive file -->
	<!-- Install/deploy the jars manually with commands like these (or use Nexus artifact upload):
		mvn deploy:deploy-file -DgroupId=com.ibm.ws.runtime -DartifactId=WS_Server -Dversion=7.0.0.2 -Dpackaging=jar -Dfile=plugins\com.ibm.ws.runtime.jar -DrepositoryId=nav-pensjon-maven2-snapshot-repo -Durl=scp://e11apvl002.utv.internsone.local/var/maven2/snapshot/
		mvn deploy:deploy-file -DgroupId=com.ibm.jaxws.thinclient -DartifactId=WebServicesFeaturePackThinClientRuntime -Dversion=7.0.0.2 -Dpackaging=jar -Dfile=runtimes/com.ibm.jaxws.thinclient_7.0.0.jar -DrepositoryId=nav-pensjon-maven2-snapshot-repo -Durl=scp://e11apvl002.utv.internsone.local/var/maven2/snapshot/
		mvn deploy:deploy-file -DgroupId=com.ibm.ws.admin.client -DartifactId=WebSphereClientServices -Dversion=7.0.0.2 -Dpackaging=jar -Dfile=runtimes/com.ibm.ws.admin.client_7.0.0.jar -DrepositoryId=nav-pensjon-maven2-snapshot-repo -Durl=scp://e11apvl002.utv.internsone.local/var/maven2/snapshot/
	 -->
	<dependencies>
		<dependency>
			<groupId>com.ibm.ws.runtime</groupId>
			<artifactId>WS_Server</artifactId>
			<version>${runtime.version}</version>
		</dependency>
		<dependency>
			<groupId>com.ibm.jaxws.thinclient</groupId>
			<artifactId>WebServicesFeaturePackThinClientRuntime</artifactId>
			<version>${runtime.version}</version>
		</dependency>
		<dependency>
			<groupId>com.ibm.ws.admin.client</groupId>
			<artifactId>WebSphereClientServices</artifactId>
			<version>${runtime.version}</version>
		</dependency>
	</dependencies>
	
	<distributionManagement>
		<repository>
			<id>nav-maven2-3rdparty-repo</id>
			<url>scp://maven.adeo.no/usr/local/sonatype-work/nexus/storage/thirdparty</url>
		</repository>
	</distributionManagement>

	<scm>
		<connection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven-runtimes/wps-runtime</connection>
		<developerConnection>scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven-runtimes/wps-runtime</developerConnection>
	</scm>
	<properties>
		<maven.test.skip>true</maven.test.skip>
		<runtime.version>7.0.0.2</runtime.version>
		<scm.root>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/int/maven-runtimes/wps-runtime
		</scm.root>
		<scm.connection>${scm.root}</scm.connection>
	</properties>
</project>