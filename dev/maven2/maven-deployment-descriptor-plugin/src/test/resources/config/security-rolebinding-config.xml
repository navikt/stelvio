<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/jee
                           http://www.springframework.org/schema/jee/spring-jee-2.0.xsd">
	
	<bean id="deploymentDescriptorMojoConfig" class="no.nav.maven.plugins.descriptor.config.DeploymentDescriptorMojoConfig">
		<property name="earConfigList">
			<list>
				<ref bean="ear.config.PEN"/>
			</list>
		</property>
	</bean>
	
	<bean id="ear.config.PEN" class="no.nav.maven.plugins.descriptor.config.EarConfig">
		<property name="applicationName" value="nav-pensjon-pen-jee-"/>
		<property name="securityRoles">
			<list>
				<ref bean="role.ejb.batch.PEN"/>
				<ref bean="role.ejb.provider.PEN"/>
			</list>
		</property>
	</bean>
	
	<bean id="role.ejb.provider.PEN" class="no.nav.maven.plugins.descriptor.config.SecurityRoleConfig">
		<property name="roleName" value="PENEjbClient"/>
		<property name="allAuthenticatedUsers" value="true"/>	
	</bean>
	
	<bean id="role.ejb.batch.PEN" class="no.nav.maven.plugins.descriptor.config.SecurityRoleConfig">
		<property name="roleName" value="BPENEjbClient"/>
		<property name="users">
			<list>
				<value>CN=srvbpen,OU=ServiceAccounts,DC=test,DC=local</value>
			</list>
		</property>
	</bean>
	
</beans>
