<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/jee
                           http://www.springframework.org/schema/jee/spring-jee-2.0.xsd">
	
	<bean id="deploymentDescriptorMojoConfig" class="no.nav.maven.plugins.descriptor.config.DeploymentDescriptorMojoConfig">
		<property name="earConfigList">
			<list>
				<ref bean="ear.PEN"/>
			</list>
		</property>
	</bean>
	
	<bean id="ear.PEN" class="no.nav.maven.plugins.descriptor.config.PensjonEarConfig">
		<property name="applicationName" value="test-prod-"/>
		<property name="defaultEjbMethodPermission" ref="ejb.permission.common"/>
		<property name="securityRoles">
			<list>
				<ref bean="role.ejb.batch.PEN"/>
				<ref bean="role.ejb.provider.PEN"/>
			</list>
		</property>
		<property name="ejbSecurityRoleMap">
			<map>
				<entry key="test-prod-"><ref bean="role.ejb.provider.PEN"/></entry>
			</map>
		</property>
	</bean>
	
	<bean id="ejb.permission.common" class="no.nav.maven.plugins.descriptor.config.EjbMethodPermissionConfig">
		<property name="methodName" value="*"/>
		<property name="methodInterfaceType" value="REMOTE"/>
		<property name="applyToAllEntepriseBeans" value="true"/>
	</bean>
	
</beans>
