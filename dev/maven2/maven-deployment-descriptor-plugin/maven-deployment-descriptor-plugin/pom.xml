<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  	<modelVersion>4.0.0</modelVersion>
  	
  	
  	<artifactId>maven-deployment-descriptor-plugin</artifactId>
  	<packaging>maven-plugin</packaging>
  	
  	<name>Maven WebSphere Deployment Descriptor Plugin</name>  	  	  	
  	<description>
  	</description>
  	<url>http://maven.apache.org</url>
  	
  	
	<parent>
		<groupId>no.nav.maven.plugins</groupId>
		<artifactId>maven-deployment-descriptor-project</artifactId>
		<version>1.1.0-SNAPSHOT</version>
		<relativePath>../maven-deployment-descriptor-project</relativePath>
	</parent>
  	
  	<dependencies>
 
     	<dependency>
    		<groupId>${project.groupId}</groupId>
      		<artifactId>maven-deployment-descriptor-common</artifactId>
    	</dependency>
    	
    	<dependency>
      		<groupId>org.apache.maven</groupId>
      		<artifactId>maven-plugin-api</artifactId>
    	</dependency>

    	<dependency>
    		<groupId>no.nav.maven.plugins</groupId>
  			<artifactId>maven-moose-earfile-retriever</artifactId>
    	</dependency>
    	
    	<!-- Test scoped dependencies -->
    	<dependency>
      		<groupId>junit</groupId>
      		<artifactId>junit</artifactId>
    	</dependency>
    	<dependency>
      		<groupId>org.apache.maven.plugin-testing</groupId>
      		<artifactId>maven-plugin-testing-harness</artifactId>
    	</dependency>
  	</dependencies>
  	
  	<scm>
		<connection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/dev/maven2/maven-deployment-descriptor-plugin
		</connection>
		<developerConnection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/dev/maven2/maven-deployment-descriptor-plugin
		</developerConnection>
	</scm>
  	
  	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.5</source>
						<target>1.5</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<configuration>
						<preparationGoals>
							clean install
						</preparationGoals>
						<autoVersionSubmodules>
							true
						</autoVersionSubmodules>
						<tagBase>
							https://versjonskontroll.adeo.no/svn/stelvio/tags
						</tagBase>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>
	</build>
	
	<distributionManagement>
       	<repository>
            <id>nav-maven2-internal-repo</id>
            <name>NAV Maven2 Internal Repository</name>
            <url>scp://maven.adeo.no/var/maven2/internal</url>
        </repository>
        <snapshotRepository>
            <id>nav-pensjon-maven2-snapshot-repo</id>
            <name>NAV Maven2 Internal Snapshot Repository</name>
            <url>scp://10.33.1.53/var/maven2/snapshot</url>
        </snapshotRepository>
    </distributionManagement>
</project>
