<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>no.nav.maven.plugins</groupId>
	<artifactId>maven-deployment-descriptor-plugin-project</artifactId>
	<packaging>pom</packaging>
	<version>1.1.15-SNAPSHOT</version>
	<name>Maven WebSphere Deployment Descriptor Plugin Project</name>

	<description>
		This module aggregates the underlying modules:
		- maven-deployment-descriptor-common
		- maven-deployment-descriptor-plugin
		Therefore you can use this module to release versions of these two.
	</description>
	<url>http://maven.apache.org</url>

	<scm>
		<connection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/dev/maven2/maven-deployment-descriptor-plugin/
		</connection>
		<developerConnection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/dev/maven2/maven-deployment-descriptor-plugin/
		</developerConnection>
	</scm>

	<modules>
		<module>maven-deployment-descriptor-common</module>
		<module>maven-deployment-descriptor-plugin</module>
	</modules>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.5</source>
						<target>1.5</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<configuration>
						<preparationGoals>
							clean install
						</preparationGoals>
						<autoVersionSubmodules>
							true
						</autoVersionSubmodules>
						<tagBase>
							https://versjonskontroll.adeo.no/svn/stelvio/tags
						</tagBase>
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-eclipse-plugin</artifactId>
					<configuration>
						<workspaceCodeStylesURL>
							http://confluence.adeo.no/download/attachments/30647/Nav-Formatter-0.1.xml?version=1
						</workspaceCodeStylesURL>
						<buildOutputDirectory>bin</buildOutputDirectory>
						<downloadJavadocs>true</downloadJavadocs>
						<downloadSources>true</downloadSources>
					</configuration>
				</plugin>				
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>maven-deployment-descriptor-common</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>${project.groupId}</groupId>
				<artifactId>maven-deployment-descriptor-plugin</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>org.apache.maven</groupId>
				<artifactId>maven-plugin-api</artifactId>
				<version>2.0</version>
			</dependency>
			<dependency>
				<groupId>no.nav.maven.plugins</groupId>
				<artifactId>maven-moose-earfile-retriever</artifactId>
				<version>1.0.0</version>
			</dependency>
			<dependency>
				<groupId>no.nav.maven</groupId>
				<artifactId>
					maven-deployment-descriptor-common-deps
				</artifactId>
				<version>1.0.0</version>
			</dependency>
			<dependency>
				<artifactId>spring-core</artifactId>
				<groupId>org.springframework</groupId>
				<version>2.0.4</version>
			</dependency>
			<dependency>
				<!-- spring-beans is a Spring core library used for manipulating Java beans. This is the most basic Spring library. -->
				<artifactId>spring-beans</artifactId>
				<groupId>org.springframework</groupId>
				<version>2.0.4</version>
			</dependency>
			<dependency>
				<!-- spring-context is a Spring core library used for configuration and dependency injection. Builds on the spring-beans library. -->
				<artifactId>spring-context</artifactId>
				<groupId>org.springframework</groupId>
				<version>2.0.4</version>
			</dependency>
			<dependency>
				<artifactId>commons-logging</artifactId>
				<groupId>commons-logging</groupId>
				<version>1.1</version>
			</dependency>

			<!-- Test scoped dependencies -->
			<dependency>
				<groupId>junit</groupId>
				<artifactId>junit</artifactId>
				<version>3.8.1</version>
				<scope>test</scope>
			</dependency>
			<dependency>
				<groupId>org.apache.maven.plugin-testing</groupId>
				<artifactId>maven-plugin-testing-harness</artifactId>
				<version>1.2</version>
				<scope>test</scope>
			</dependency>
		</dependencies>

	</dependencyManagement>

	<distributionManagement>
		<repository>
			<id>nav-maven2-internal-repo</id>
			<url>scp://maven.adeo.no/var/maven2/internal</url>
		</repository>
	</distributionManagement>
</project>