<project>
  <parent>
    <artifactId>maven-plugin-parent</artifactId>
    <groupId>org.apache.maven.plugins</groupId>
    <version>2.0</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <artifactId>maven-ejb-plugin</artifactId>
  <packaging>maven-plugin</packaging>
  <name>Maven EJB Plugin</name>
  <version>2.1-NAV-1</version>
  <url>http://10.33.1.53/project/maven/plugins/maven-ejb-plugin</url>
  
  <dependencies>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-project</artifactId>
    </dependency>
    
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-archiver</artifactId>
      <version>2.2</version>
    </dependency>
    
    <dependency>
    	<groupId>no.nav.maven</groupId>
    	<artifactId>nav-maven-common</artifactId>
    	<version>1.0</version>
    </dependency>
  </dependencies>
  
  	<developers>
        <developer>
            <name>person4f9bc5bd17cc</name>
            <id>esa2812</id>
            <email>test@example.com</email>
            <organization>Accenture</organization>
            <roles>
                <role>Utviklingsarkitekt</role>
            </roles>
            <timezone>+1</timezone>
        </developer>
    </developers>
  
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<configuration>
					<attach>true</attach>
				</configuration>
				<executions>
					<execution>
						<phase>package</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-eclipse-plugin</artifactId>
				<executions>
					<execution>
						<id>eclipse:eclipse</id>
						<phase>clean</phase>
						<goals>
							<goal>eclipse</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
				
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <configuration>
                        <source>1.5</source>
                        <target>1.5</target>
                    </configuration>
                </plugin>
                
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-surefire-plugin</artifactId>
                    <configuration>
                        <testFailureIgnore>true</testFailureIgnore>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>
	</build>
	
	<distributionManagement>
       	<repository>
            <id>nav-maven2-internal-repo</id>
            <name>NAV Maven2 Internal Repository</name>
            <url>scp://maven.adeo.no/var/maven2/internal</url>
        </repository>
        <snapshotRepository>
            <id>nav-pensjon-maven2-snapshot-repo</id>
            <name>NAV Maven2 Internal Snapshot Repository</name>
            <url>scp://maven.adeo.no/var/maven2/snapshot</url>
        </snapshotRepository>
        <site>
            <id>website</id>
            <url>scp://10.33.1.53/var/www/html/project/maven/plugins/maven-ejb-plugin</url>
        </site>
    </distributionManagement>
</project>