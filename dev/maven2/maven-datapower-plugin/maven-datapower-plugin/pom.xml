		</developerConnection>
	</scm>

	<artifactId>maven-datapower-plugin</artifactId>
	<packaging>maven-plugin</packaging>

	<name>Maven DataPower Plugin</name>
	<description>
		This plugin provides goals for: - Generating DataPower
		configuration based on predefined templates and specified WSDL
		files. - Importing files to a DataPower device. - Importing a
		pre-generated configuration to a DataPower device.
	</description>
	<url>http://maven.apache.org</url>
	<dependencies>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>datapower-utils</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>datapower-xml-mgmt</artifactId>
		</dependency>
		<dependency>
			<groupId>${project.groupId}</groupId>
			<artifactId>datapower-cfg-gen</artifactId>
		</dependency>

		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-plugin-api</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.maven</groupId>
			<artifactId>maven-project</artifactId>
		</dependency>
		<dependency>
			<groupId>com.pyx4j</groupId>
			<artifactId>maven-plugin-log4j</artifactId>
		</dependency>

		<!-- Test scoped dependencies -->
		<dependency>
			<groupId>org.apache.maven.plugin-testing</groupId>
			<artifactId>maven-plugin-testing-harness</artifactId>
		</dependency>
		<dependency>
			<groupId>org.codehaus.plexus</groupId>
			<artifactId>plexus-utils</artifactId>
		</dependency>
		<!--  	<dependency>
			<groupId>org.apache.maven.plugin-testing</groupId>
			<artifactId>maven-test-tools</artifactId>
			<version>1.2</version>
			<scope>test</scope>
			</dependency>
			<dependency>
			<groupId>org.apache.maven.plugin-testing</groupId>
			<artifactId>maven-plugin-testing-tools</artifactId>
			<version>1.2</version>
			<scope>test</scope>
			</dependency>-->
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>1.5</source>
					<target>1.5</target>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<distributionManagement>
		<repository>
			<id>nav-maven2-internal-repo</id>
			<name>NAV Maven2 Internal Repository</name>
			<url>scp://maven.adeo.no/var/maven2/internal</url>
		</repository>
		<snapshotRepository>
			<id>nav-pensjon-maven2-snapshot-repo</id>
			<name>NAV Maven2 Internal Snapshot Repository</name>
			<url>scp://maven.adeo.no/var/maven2/snapshot</url>
		</snapshotRepository>
		<site>
			<id>website</id>
			<url>
				scp://10.33.1.53/var/www/html/project/maven/plugins/appXml/
			</url>
		</site>
	</distributionManagement>
</project>
