<plugin>
  <description>This plugin provides goals for:
- Generating DataPower configuration based on predefined templates and specified WSDL files.
- Importing files to a DataPower device.
- Importing a pre-generated configuration to a DataPower device.</description>
  <groupId>no.nav.maven.plugins</groupId>
  <artifactId>maven-datapower-plugin</artifactId>
  <version>1.0-SNAPSHOT</version>
  <goalPrefix>datapower</goalPrefix>
  <isolatedRealm>false</isolatedRealm>
  <inheritedByDefault>true</inheritedByDefault>
  <mojos>
    <mojo>
      <goal>cleanFiles</goal>
      <description>Goal which deletes all files from the specified locations in the specified domain</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>no.nav.maven.plugins.CleanFilesMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <parameters>
        <parameter>
          <name>deviceUrl</name>
          <type>java.net.URL</type>
          <required>true</required>
          <editable>true</editable>
          <description>The URL of the DataPower device to manage. Note: HTTPS required:
https://hostname:5550</description>
        </parameter>
        <parameter>
          <name>domain</name>
          <type>java.lang.String</type>
          <required>true</required>
          <editable>true</editable>
          <description>The DataPower configuration domain</description>
        </parameter>
      </parameters>
      <configuration>
        <domain implementation="java.lang.String">${domain}</domain>
        <deviceUrl implementation="java.net.URL">${deviceUrl}</deviceUrl>
      </configuration>
    </mojo>
    <mojo>
      <goal>generateConfig</goal>
      <description>Goal which generates a DataPower configuration.</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>no.nav.maven.plugins.GenerateConfigMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <parameters>
        <parameter>
          <name>domain</name>
          <type>java.lang.String</type>
          <required>true</required>
          <editable>true</editable>
          <description>The DataPower configuration domain</description>
        </parameter>
        <parameter>
          <name>outputDirectory</name>
          <alias>outDir</alias>
          <type>java.io.File</type>
          <required>true</required>
          <editable>true</editable>
          <description>Output directory</description>
        </parameter>
        <parameter>
          <name>propertiesFile</name>
          <alias>props</alias>
          <type>java.io.File</type>
          <required>true</required>
          <editable>true</editable>
          <description>Environment specific properties to be used when generating the DataPower configuration</description>
        </parameter>
        <parameter>
          <name>wsdlArchive</name>
          <alias>wsdls</alias>
          <type>java.io.File</type>
          <required>true</required>
          <editable>true</editable>
          <description>ZIP archive containing WSDLs</description>
        </parameter>
      </parameters>
      <configuration>
        <propertiesFile implementation="java.io.File">${props}</propertiesFile>
        <outputDirectory implementation="java.io.File">${outDir}</outputDirectory>
        <domain implementation="java.lang.String">${domain}</domain>
        <wsdlArchive implementation="java.io.File">${wsdls}</wsdlArchive>
      </configuration>
    </mojo>
    <mojo>
      <goal>importConfig</goal>
      <description>Goal which imports a DataPower configuration into a specified device.</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>no.nav.maven.plugins.ImportConfigMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <parameters>
        <parameter>
          <name>domain</name>
          <type>java.lang.String</type>
          <required>true</required>
          <editable>true</editable>
          <description>The DataPower configuration domain</description>
        </parameter>
      </parameters>
      <configuration>
        <domain implementation="java.lang.String">${domain}</domain>
      </configuration>
    </mojo>
    <mojo>
      <goal>importFiles</goal>
      <description>Goal which imports a DataPower configuration into a specified device.</description>
      <requiresDirectInvocation>false</requiresDirectInvocation>
      <requiresProject>true</requiresProject>
      <requiresReports>false</requiresReports>
      <aggregator>false</aggregator>
      <requiresOnline>false</requiresOnline>
      <inheritedByDefault>true</inheritedByDefault>
      <implementation>no.nav.maven.plugins.ImportFilesMojo</implementation>
      <language>java</language>
      <instantiationStrategy>per-lookup</instantiationStrategy>
      <executionStrategy>once-per-session</executionStrategy>
      <parameters>
        <parameter>
          <name>domain</name>
          <type>java.lang.String</type>
          <required>true</required>
          <editable>true</editable>
          <description>The DataPower configuration domain</description>
        </parameter>
      </parameters>
      <configuration>
        <domain implementation="java.lang.String">${domain}</domain>
      </configuration>
    </mojo>
  </mojos>
  <dependencies/>
</plugin>