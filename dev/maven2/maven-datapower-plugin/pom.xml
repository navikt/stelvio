<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>no.nav.maven.plugins</groupId>
	<artifactId>maven-datapower-plugin-project</artifactId>
	<packaging>pom</packaging>
	<version>1.1.4-SNAPSHOT</version>
	
	<name>Maven DataPower Plugin Project</name>
	<description>
		This plugin provides goals for: 
		- Generating DataPower configuration based on predefined templates and specified WSDL
		files. 
		- Importing files to a DataPower device. 
		- Importing a pre-generated configuration to a DataPower device.
	</description>
	<url>http://maven.apache.org</url>

	<scm>
		<connection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/dev/maven2/maven-datapower-plugin/
		</connection>
		<developerConnection>
			scm:svn:https://versjonskontroll.adeo.no/svn/stelvio/trunk/dev/maven2/maven-datapower-plugin/
		</developerConnection>
	</scm>

	<modules>
		<module>datapower-utils</module>
		<module>datapower-cfg-gen</module>
		<module>datapower-xml-mgmt</module>
		<module>maven-datapower-plugin</module>
	</modules>

	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-compiler-plugin</artifactId>
					<configuration>
						<source>1.5</source>
						<target>1.5</target>
					</configuration>
				</plugin>
				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-release-plugin</artifactId>
					<configuration>
						<preparationGoals>
							clean install
						</preparationGoals>
						<autoVersionSubmodules>
							true
						</autoVersionSubmodules>
						<tagBase>
							https://versjonskontroll.adeo.no/svn/stelvio/tags
						</tagBase>
					</configuration>
				</plugin>
				<plugin>
					<artifactId>maven-eclipse-plugin</artifactId>
					<configuration>
						<workspaceCodeStylesURL>
							http://confluence.adeo.no/download/attachments/30647/Nav-Formatter-0.1.xml?version=1
						</workspaceCodeStylesURL>
						<buildOutputDirectory>bin</buildOutputDirectory>
						<downloadJavadocs>true</downloadJavadocs>
						<downloadSources>true</downloadSources>
					</configuration>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
			<plugin>
				<artifactId>maven-source-plugin</artifactId>
				<executions>
					<execution>
						<id>attach-sources</id>
						<phase>verify</phase>
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

	<dependencyManagement>
