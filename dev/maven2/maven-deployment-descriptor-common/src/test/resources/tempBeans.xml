?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:jee="http://www.springframework.org/schema/jee"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
                           http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
                           http://www.springframework.org/schema/jee
                           http://www.springframework.org/schema/jee/spring-jee-2.0.xsd">
	
	<bean id="deploymentDescriptorMojoConfig" class="no.nav.maven.plugins.descriptor.config.DeploymentDescriptorMojoConfig">
		<property name="earConfigList">
			<list>
				<value><ref local="ear.PENConfig"/></value>
			</list>
		</property>
	</bean>
	
	<bean id="ear.PENConfig" class="no.nav.maven.plugins.descriptor.config.EarDescriptorConfig">
		<property name="applicationName" value="nav-pensjon-pen-jee-2.0.136.D3.ear"/>
		<property name="ejbJarFiles">
			<list>
				<value><ref local=""/></value>
			</list>
		</property>
		<property name="securityRoles">
			<list>
				<value><ref local="role.batch.PEN"/></value>
				<value><ref local="role.provider.PEN"/></value>
			</list>
		</property>
	</bean>
	
	<bean id="ejb.provider.PEN" class="no.nav.maven.plugins.descriptor.config.JarDescriptorConfig">
		<property name="jarName" value="nav-provider-pensjon-pen-ejb"/>
		<property name="ejbConfigList">
			<list>
				<value><ref local=""/></value>
			</list>
		</property>
	</bean>
	
	<bean id="ejb.batch.config" class="no.nav.maven.plugins.descriptor.config.PensjonBatchEjbConfig">
		<property name="jarName" value="nav-batch-pensjon-"/>
		<property name="securityRoleMap">
			<map>
				<entry key="PEN"><ref local="role.batch.PEN"/></entry>
			</map>
		</property>
		<property name="defaultEjbMethodPermission" ref="ejb.permission.DEFAULT"/>
	</bean>
	
	<bean id="ejb.permission.DEFAULT" class="no.nav.maven.plugins.descriptor.config.EjbMethodPermissionConfig">
		<property name="methodName" value="*"/>
		<property name="methodInterface" value="REMOTE"/>
		<property name="applyToAllEntepriseBeans" value="true"/>
	</bean>
	
	
	
	<bean id="ejb.provider.permission.PEN" class="no.nav.maven.plugins.descriptor.config.EjbMethodPermissionConfig">
		<property name="methodName" value="*"/>
		<property name="methodInterface" value="REMOTE"/>
		<property name="applyToAllEntepriseBeans" value="true"/>
		<property name="securityRoles">
			<list>
				<value><ref local="role.provider.PEN"/></value>
			</list>
		</property>
	</bean>
	
	<bean id="ejb.batch.permission.PEN" class="no.nav.maven.plugins.descriptor.config.EjbMethodPermissionConfig">
		<property name="methodName" value="*"/>
		<property name="methodInterface" value="REMOTE"/>
		<property name="applyToAllEntepriseBeans" value="true"/>
		<property name="securityRoles">
			<list>
				<value><ref local="role.batch.PEN"/></value>
			</list>
		</property>
	</bean>
	
	
	<bean id="role.provider.PEN" class="no.nav.maven.plugins.descriptor.config.SecurityRoleConfig">
		<property name="roleName" value="PENEjbClient"/>
		<property name="allAuthenticatedUsers" value="true"/>	
	</bean>
	<bean id="role.batch.PEN" class="no.nav.maven.plugins.descriptor.config.SecurityRoleConfig">
		<property name="roleName" value="BPENEjbClient"/>
		<property name="users">
			<list>
				<value>CN=srvbpen,OU=ServiceAccounts,DC=test,DC=local</value>
			</list>
		</property>
	</bean>
	
	<!-- 
	<
	 -->
</beans>
