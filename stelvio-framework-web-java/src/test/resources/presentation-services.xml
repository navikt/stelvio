<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "spring-beans.dtd">
<!-- 
	Presentation Services Configuration is used by the FrameworkActionServlet
-->
<beans>

	<bean id="RemoteServiceLocator" class="no.stelvio.common.framework.ejb.RemoteServiceLocator" />

	<bean id="BusinessDelegate" class="no.stelvio.common.framework.ejb.ServiceDelegateImpl">
		<property name="serviceLocator">
			<ref bean="RemoteServiceLocator" />
		</property>
		<property name="serviceFacadeName">
			<value>BusinessFacade</value>
		</property>
		<property name="delegateMonitorKey">
			<bean class="no.stelvio.common.framework.performance.MonitorKey">
				<property name="description">
					<value>BusinessFacade</value>
				</property>
				<property name="level">
					<value>2</value>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="InitCodesTableManager" class="no.stelvio.common.framework.ejb.ServiceDelegateImpl">
		<property name="serviceLocator">
			<ref bean="RemoteServiceLocator" />
		</property>
		<property name="serviceFacadeName">
			<value>BusinessFacade</value>
		</property>
		<property name="delegateMonitorKey">
			<bean class="no.stelvio.common.framework.performance.MonitorKey">
				<property name="description">
					<value>InitCodesTableManager</value>
				</property>
				<property name="level">
					<value>5</value>
				</property>
			</bean>
		</property>
	</bean>

	<bean id="TestBean" class="no.stelvio.web.framework.servlet.ServletContextAttributeSetter"/>

	<bean id="ServletContextAwareBean"
	       class="no.stelvio.web.framework.servlet.StartupServletTest$ServletContextAwareBean"/>

</beans>

