<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>stelvio.example</groupId>
		<artifactId>stelvio-example-jaxws-consumer</artifactId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	
	<artifactId>stelvio-example-jaxws-consumer-jee</artifactId>
	<packaging>ear</packaging>
	<name>${project.artifactId}</name>
	
	<dependencies>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>stelvio-example-jaxws-consumer-ejb</artifactId>
            <version>${project.version}</version>
            <type>ejb</type>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>stelvio-example-jaxws-consumer-web</artifactId>
            <version>${project.version}</version>
            <type>war</type>
            <scope>runtime</scope>
        </dependency>
        
        <dependency>
            <groupId>org.springframework</groupId>
            <artifactId>spring-web</artifactId>
            <version>${spring.version}</version>
            <scope>runtime</scope>
        </dependency>
        <dependency>
            <groupId>no.stelvio</groupId>
            <artifactId>stelvio-consumer-java</artifactId>
            <version>${stelvio.version}</version>
            <scope>runtime</scope>
        </dependency>
        
	</dependencies>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>${maven-ear-plugin.version}</version>
				<configuration>
					<modules>
						<ejbModule>
							<groupId>${project.groupId}</groupId>
							<artifactId>stelvio-example-jaxws-consumer-ejb</artifactId>
							<bundleFileName>stelvio-example-jaxws-consumer-ejb.jar</bundleFileName>
						</ejbModule>
						<webModule>
							<groupId>${project.groupId}</groupId>
							<artifactId>stelvio-example-jaxws-consumer-web</artifactId>
							<contextRoot>/stelvio-consumer-jaxws</contextRoot>
							<bundleFileName>stelvio-example-jaxws-consumer-web.war</bundleFileName>
						</webModule>
					</modules>
					<archive>
						<manifest>
							<addDefaultSpecificationEntries>true</addDefaultSpecificationEntries>
							<addDefaultImplementationEntries>true</addDefaultImplementationEntries>
						</manifest>
					</archive>
					<earSourceDirectory>${basedir}/</earSourceDirectory>
					<earSourceIncludes>META-INF/*.*</earSourceIncludes>
					<version>5</version>
					<skinnyWars>true</skinnyWars>
					<defaultLibBundleDir>lib/</defaultLibBundleDir>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>